<% layout('layouts/boilerplate') %>
<!-- views/specialties/index.ejs -->
<div class="material-page-header">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title mb-0">Gestion des Spécialités</h1>
                <p class="page-subtitle">Configuration et gestion des spécialités médicales</p>
            </div>
            <a href="/specialties/new" class="action-button">
                <i class="bi bi-plus-circle"></i>Nouvelle Spécialité
            </a>
        </div>
    </div>
</div>

<div class="container">
    <!-- Filtres -->
    <div class="material-filters">
        <h5 class="filter-title">
            <i class="bi bi-funnel"></i>Filtres et Recherche
        </h5>
        <form method="GET" class="row g-3">
            <div class="col-md-8">
                <label class="form-label">Recherche</label>
                <input type="text" name="search" class="form-control" placeholder="Nom, code ou description de la spécialité..." value="<%= typeof filters !== 'undefined' && filters.search ? filters.search : '' %>">
            </div>
            <div class="col-md-4">
                <label class="form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-search"></i>
                    </button>
                    <a href="/specialties" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Liste des spécialités -->
    <div class="material-card">
        <div class="card-header">
            <h5 class="card-title">
                <i class="bi bi-list-ul"></i>Liste des Spécialités
                <span class="badge bg-light text-primary ms-2"><%= specialties.length %></span>
            </h5>
        </div>
        <div class="card-body">
            <% if (specialties.length > 0) { %>
                <div class="material-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Spécialité</th>
                                <th>Description</th>
                                <th>Créé le</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% specialties.forEach(specialty => { %>
                                <tr>
                                    <td>
                                        <span class="badge bg-light text-dark fw-bold"><%= specialty.code %></span>
                                    </td>
                                    <td>
                                        <div class="material-name">
                                            <div class="material-avatar">
                                                <i class="bi bi-award"></i>
                                            </div>
                                            <div class="material-details">
                                                <h6><%= specialty.name %></h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <% if (specialty.description) { %>
                                            <%= specialty.description.length > 50 ? specialty.description.substring(0, 50) + '...' : specialty.description %>
                                        <% } else { %>
                                            <span class="text-muted">Non spécifiée</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <%= typeof moment !== 'undefined' ? moment(specialty.createdAt).format('DD/MM/YYYY') : new Date(specialty.createdAt).toLocaleDateString('fr-FR') %>
                                    </td>
                                    <td>
                                        <div class="material-actions">
                                            <a href="/specialties/<%= specialty._id %>/edit" class="btn btn-outline-warning btn-sm" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger btn-sm" onclick="deleteSpecialty('<%= specialty._id %>')" title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="material-empty-state">
                    <div class="empty-icon">
                        <i class="bi bi-award"></i>
                    </div>
                    <h5 class="empty-title">Aucune spécialité trouvée</h5>
                    <p class="empty-description">Commencez par ajouter des spécialités médicales</p>
                    <a href="/specialties/new" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>Ajouter la première spécialité
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script>
function deleteSpecialty(id) {
    if (confirm('Êtes-vous sûr de vouloir supprimer cette spécialité ?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/specialties/' + id + '?_method=DELETE';
        document.body.appendChild(form);
        form.submit();
    }
}
</script>

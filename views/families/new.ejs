<% layout('layouts/boilerplate') %>
<!-- views/families/new.ejs -->
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="prestation-card">
            <div class="prestation-header">
                <div class="d-flex align-items-center">
                    <div class="prestation-avatar me-3">
                        <i class="bi bi-plus-circle"></i>
                    </div>
                    <div>
                        <h3 class="prestation-title">Nouvelle Famille</h3>
                        <p class="prestation-subtitle">Ajouter un nouveau groupe de prestations</p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                <form method="POST" action="/families" class="prestation-form">
                    <div class="mb-3">
                        <label for="specialty" class="form-label">
                            <i class="bi bi-award me-1"></i>Spécialité *
                        </label>
                        <select name="specialty" id="specialty" class="form-select" required>
                            <option value="">Sélectionner une spécialité</option>
                            <% specialties.forEach(specialty => { %>
                                <option value="<%= specialty._id %>" <%= family.specialty === specialty._id ? 'selected' : '' %>>
                                    <%= specialty.name %>
                                </option>
                            <% }); %>
                        </select>
                        <div class="form-text">La spécialité à laquelle cette famille appartient</div>
                    </div>

                    <div class="mb-3">
                        <label for="name" class="form-label">
                            <i class="bi bi-collection me-1"></i>Nom de la Famille *
                        </label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= family.name || '' %>" placeholder="Ex: PAROI ABDOMINALE, FOIE VOIES BILIAIRES" required>
                        <div class="form-text">Nom unique au sein de la spécialité</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">
                            <i class="bi bi-text-paragraph me-1"></i>Description
                        </label>
                        <textarea class="form-control" id="description" name="description" rows="3" placeholder="Description détaillée de cette famille..."><%= family.description || '' %></textarea>
                        <div class="form-text">Description optionnelle de la famille</div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/families" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Retour
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-2"></i>Enregistrer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

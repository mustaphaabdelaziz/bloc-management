<% layout('layouts/boilerplate') %>
<!-- views/fonctions/edit.ejs -->
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="bi bi-pencil me-2"></i>Modifier Fonction
                </h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/fonctions/<%= fonction._id %>?_method=PUT">
                    <div class="mb-3">
                        <label for="code" class="form-label">Code *</label>
                        <input type="text" class="form-control" id="code" name="code" value="<%= fonction.code %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="name" class="form-label">Nom *</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= fonction.name %>" required>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/fonctions" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Annuler
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save me-2"></i>Sauvegarder
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% layout('layouts/boilerplate') %>
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="bi bi-person-workspace me-2"></i>Nouvelle Fonction
                </h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/fonctions">
                    <div class="mb-3">
                        <label for="code" class="form-label">Code *</label>
                        <input type="text" class="form-control" id="code" name="code" value="<%= fonction.code || '' %>" required>
                        <div class="form-text">Code unique pour identifier la fonction</div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="name" class="form-label">Nom *</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= fonction.name || '' %>" required>
                        <div class="form-text">Nom complet de la fonction (ex: Anesth√©siste, Infirmier, etc.)</div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/fonctions" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Retour
                        </a>
                        <button type="submit" class="btn btn-info">
                            <i class="bi bi-save me-2"></i>Enregistrer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

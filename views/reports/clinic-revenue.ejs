<% layout('layouts/boilerplate') %>
<div class="report-page-container">
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-cash-stack text-success me-2"></i>
                        Rapport des Revenus Cliniques
                    </h2>
                    <p class="text-muted mb-0">
                        Analyse séparée des revenus par type de contrat chirurgien
                    </p>
                </div>
                <div class="text-end">
                    <small class="text-muted">
                        Période: <%= moment(filters.startDate).format('DD/MM/YYYY') %> - <%= moment(filters.endDate).format('DD/MM/YYYY') %>
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="report-card">
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-4">
                            <label for="startDate" class="form-label">
                                <i class="bi bi-calendar-event me-1"></i>Date début
                            </label>
                            <input type="date" class="form-control" id="startDate" name="startDate"
                                   value="<%= filters.startDate %>">
                        </div>
                        <div class="col-md-4">
                            <label for="endDate" class="form-label">
                                <i class="bi bi-calendar-check me-1"></i>Date fin
                            </label>
                            <input type="date" class="form-control" id="endDate" name="endDate"
                                   value="<%= filters.endDate %>">
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="report-btn btn-primary">
                                <i class="bi bi-search me-1"></i>Filtrer
                            </button>
                            <a href="/reports/clinic-revenue" class="report-btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise me-1"></i>Réinitialiser
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Résumé global -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="report-summary-card allocation-summary">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-cash me-2"></i>
                        Revenus Allocation
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="metric-item">
                                <h3 class="metric-value">
                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(revenueByContractType.allocation.totalRevenue) %>
                                </h3>
                                <p class="metric-label">Total Revenus</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="metric-item">
                                <h4 class="metric-value text-primary"><%= revenueByContractType.allocation.totalSurgeries %></h4>
                                <p class="metric-label">Chirurgies</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="report-summary-card percentage-summary">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-percent me-2"></i>
                        Revenus Pourcentage
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="metric-item">
                                <h3 class="metric-value">
                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(revenueByContractType.percentage.totalRevenue) %>
                                </h3>
                                <p class="metric-label">Total Revenus</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center">
                                <h4 class="text-info mb-1"><%= revenueByContractType.percentage.totalSurgeries %></h4>
                                <p class="text-muted small mb-0">Chirurgies</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Onglets pour les détails -->
    <div class="row">
        <div class="col-12">
            <div class="report-tabs">
                <ul class="nav nav-tabs" id="revenueTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="allocation-tab" data-bs-toggle="tab" data-bs-target="#allocation" type="button" role="tab">
                            <i class="bi bi-cash me-1"></i>Contrats Allocation
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="percentage-tab" data-bs-toggle="tab" data-bs-target="#percentage" type="button" role="tab">
                            <i class="bi bi-percent me-1"></i>Contrats Pourcentage
                        </button>
                    </li>
                </ul>

                <div class="tab-content" id="revenueTabsContent">
                    <!-- Onglet Allocation -->
                    <div class="tab-pane fade show active" id="allocation" role="tabpanel">
                        <div class="report-card mt-3">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-list-ul me-2"></i>Détail des Revenus - Contrats d'Allocation
                                </h6>
                            </div>
                            <div class="card-body">
                                <!-- Ventilation des revenus allocation -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-success mb-3">
                                            <i class="bi bi-pie-chart me-2"></i>Ventilation des Revenus
                                        </h6>
                                        <div class="revenue-breakdown">
                                            <div class="breakdown-item">
                                                <div class="breakdown-value text-success">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(revenueByContractType.allocation.breakdown.allocationFees) %>
                                                </div>
                                                <div class="breakdown-label">Allocation</div>
                                            </div>
                                            <div class="breakdown-item">
                                                <div class="breakdown-value text-danger">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(revenueByContractType.allocation.breakdown.materialCosts) %>
                                                </div>
                                                <div class="breakdown-label">Matériaux</div>
                                            </div>
                                            <div class="breakdown-item">
                                                <div class="breakdown-value text-info">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(revenueByContractType.allocation.breakdown.personnelFees) %>
                                                </div>
                                                <div class="breakdown-label">Personnel</div>
                                            </div>
                                            <div class="breakdown-item">
                                                <div class="breakdown-value text-warning">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(revenueByContractType.allocation.breakdown.urgentFees) %>
                                                </div>
                                                <div class="breakdown-label">Urgents</div>
                                            </div>
                                            <div class="breakdown-item">
                                                <div class="breakdown-value text-danger">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(revenueByContractType.allocation.breakdown.extraFees) %>
                                                </div>
                                                <div class="breakdown-label">Suppl.</div>
                                            </div>
                                            <div class="breakdown-item total">
                                                <div class="breakdown-value">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(revenueByContractType.allocation.totalRevenue) %>
                                                </div>
                                                <div class="breakdown-label">Total</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            <!-- Table des détails allocation -->
                            <div class="report-table">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th><i class="bi bi-hash me-1"></i>Chirurgie</th>
                                                <th><i class="bi bi-person me-1"></i>Chirurgien</th>
                                                <th><i class="bi bi-calendar me-1"></i>Date</th>
                                                <th><i class="bi bi-clock me-1"></i>Durée</th>
                                                <th><i class="bi bi-cash me-1"></i>Allocation</th>
                                                <th><i class="bi bi-box me-1"></i>Matériaux</th>
                                                <th><i class="bi bi-people me-1"></i>Personnel</th>
                                                <th><i class="bi bi-exclamation-triangle me-1"></i>Urgents</th>
                                                <th><i class="bi bi-plus-circle me-1"></i>Suppl.</th>
                                                <th><i class="bi bi-trophy me-1"></i>Total</th>
                                            </tr>
                                        </thead>
                                    <tbody>
                                        <% revenueByContractType.allocation.details.forEach(detail => { %>
                                            <tr>
                                                <td><strong><%= detail.surgeryCode %></strong></td>
                                                <td><%= detail.surgeonName %></td>
                                                <td><%= moment(detail.date).format('DD/MM/YYYY') %></td>
                                                <td><%= detail.duration %> min</td>
                                                <td class="text-success">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(detail.allocationCost) %>
                                                </td>
                                                <td class="text-danger">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(detail.materialCost) %>
                                                </td>
                                                <td class="text-info">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(detail.personnelCost) %>
                                                </td>
                                                <td class="text-warning">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(detail.urgentFee) %>
                                                </td>
                                                <td class="text-danger">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(detail.extraFees) %>
                                                </td>
                                                <td class="text-success fw-bold">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(detail.totalRevenue) %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Onglet Pourcentage -->
                <div class="tab-pane fade" id="percentage" role="tabpanel">
                    <div class="report-card mt-3">
                        <div class="card-header">
                            <h6 class="mb-0">
                                <i class="bi bi-list-ul me-2"></i>Détail des Revenus - Contrats de Pourcentage
                            </h6>
                        </div>
                        <div class="card-body">
                            <!-- Ventilation des revenus pourcentage -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h6 class="text-primary mb-3">
                                        <i class="bi bi-pie-chart me-2"></i>Ventilation des Revenus
                                    </h6>
                                    <div class="revenue-breakdown">
                                        <div class="breakdown-item">
                                            <div class="breakdown-value text-primary">
                                                <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(revenueByContractType.percentage.breakdown.baseRevenue) %>
                                            </div>
                                            <div class="breakdown-label">Base</div>
                                        </div>
                                        <div class="breakdown-item">
                                            <div class="breakdown-value text-danger">
                                                <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(revenueByContractType.percentage.breakdown.materialCosts) %>
                                            </div>
                                            <div class="breakdown-label">Matériaux</div>
                                        </div>
                                        <div class="breakdown-item">
                                            <div class="breakdown-value text-info">
                                                <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(revenueByContractType.percentage.breakdown.personnelFees) %>
                                            </div>
                                            <div class="breakdown-label">Personnel</div>
                                        </div>
                                        <div class="breakdown-item">
                                            <div class="breakdown-value text-warning">
                                                <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(revenueByContractType.percentage.breakdown.urgentFees) %>
                                            </div>
                                            <div class="breakdown-label">Urgents</div>
                                        </div>
                                        <div class="breakdown-item">
                                            <div class="breakdown-value text-danger">
                                                <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(revenueByContractType.percentage.breakdown.extraFees) %>
                                            </div>
                                            <div class="breakdown-label">Suppl.</div>
                                        </div>
                                        <div class="breakdown-item total">
                                            <div class="breakdown-value">
                                                <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(revenueByContractType.percentage.totalRevenue) %>
                                            </div>
                                            <div class="breakdown-label">Total</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Table des détails pourcentage -->
                            <div class="report-table">
                                <div class="table-responsive">
                                    <table class="table">
                                    <thead>
                                        <tr>
                                            <th><i class="bi bi-hash me-1"></i>Chirurgie</th>
                                            <th><i class="bi bi-person me-1"></i>Chirurgien</th>
                                            <th><i class="bi bi-calendar me-1"></i>Date</th>
                                            <th><i class="bi bi-clock me-1"></i>Durée</th>
                                            <th><i class="bi bi-cash me-1"></i>Base</th>
                                            <th><i class="bi bi-person-badge me-1"></i>Hon. Chir.</th>
                                            <th><i class="bi bi-percent me-1"></i>%</th>
                                            <th><i class="bi bi-box me-1"></i>Matériaux</th>
                                            <th><i class="bi bi-people me-1"></i>Personnel</th>
                                            <th><i class="bi bi-exclamation-triangle me-1"></i>Urgents</th>
                                            <th><i class="bi bi-plus-circle me-1"></i>Suppl.</th>
                                            <th><i class="bi bi-trophy me-1"></i>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% revenueByContractType.percentage.details.forEach(detail => { %>
                                            <tr>
                                                <td><strong><%= detail.surgeryCode %></strong></td>
                                                <td><%= detail.surgeonName %></td>
                                                <td><%= moment(detail.date).format('DD/MM/YYYY') %></td>
                                                <td><%= detail.duration %> min</td>
                                                <td class="text-primary">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(detail.baseRevenue) %>
                                                </td>
                                                <td class="text-secondary">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(detail.surgeonAmount) %>
                                                </td>
                                                <td class="text-info">
                                                    <%= detail.percentage %>%
                                                </td>
                                                <td class="text-danger">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(detail.clinicMaterials) %>
                                                </td>
                                                <td class="text-info">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(detail.clinicPersonnel) %>
                                                </td>
                                                <td class="text-warning">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(detail.urgentFee) %>
                                                </td>
                                                <td class="text-danger">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(detail.extraFees) %>
                                                </td>
                                                <td class="text-primary fw-bold">
                                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(detail.totalRevenue) %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

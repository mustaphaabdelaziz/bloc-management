<% layout('layouts/boilerplate')%>
<div class="reports-container">
<div class="row">
    <div class="col-12">
        <div class="text-center mb-5">
            <i class="bi bi-graph-up fa-4x text-primary mb-3"></i>
            <h2>Rapports et Analyses</h2>
            <p class="text-muted">
                Consultez les différents rapports d'activité et analyses financières
            </p>
        </div>
    </div>
</div>

<div class="row">
    <!-- Revenus cliniques -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="report-card h-100" style="animation-delay: 0.1s">
            <div class="card-body text-center">
                <div class="report-icon revenue-icon mb-3">
                    <i class="bi bi-cash-stack fa-2x"></i>
                </div>
                <h5 class="card-title">Revenus Cliniques</h5>
                <p class="card-text text-muted">
                    Analyse des revenus séparés par type de contrat chirurgien
                </p>
                <a href="/reports/clinic-revenue" class="report-btn btn-outline-primary">
                    Consulter <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Rapport honoraires chirurgiens -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="report-card h-100" style="animation-delay: 0.2s">
            <div class="card-body text-center">
                <div class="report-icon surgeon-icon mb-3">
                    <i class="bi bi-person-badge fa-2x"></i>
                </div>
                <h5 class="card-title">Honoraires Chirurgiens</h5>
                <p class="card-text text-muted">
                    Calcul des honoraires et rémunérations par période et chirurgien
                </p>
                <a href="/reports/surgeon-fees" class="report-btn btn-outline-primary">
                    Consulter <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Activité personnel médical -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="report-card h-100" style="animation-delay: 0.3s">
            <div class="card-body text-center">
                <div class="report-icon staff-icon mb-3">
                    <i class="bi bi-people-fill fa-2x"></i>
                </div>
                <h5 class="card-title">Activité Personnel</h5>
                <p class="card-text text-muted">
                    Suivi de l'activité et participation du personnel médical
                </p>
                <a href="/reports/medical-staff-activity" class="report-btn btn-outline-primary">
                    Consulter <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Consommation matériaux -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="report-card h-100" style="animation-delay: 0.4s">
            <div class="card-body text-center">
                <div class="report-icon material-icon mb-3">
                    <i class="bi bi-box-seam fa-2x"></i>
                </div>
                <h5 class="card-title">Utilisation Matériaux</h5>
                <p class="card-text text-muted">
                    Statistiques détaillées de consommation par chirurgien, prestation et période
                </p>
                <a href="/reports/material-usage" class="report-btn btn-outline-primary">
                    Consulter <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Statistiques générales -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="report-card h-100" style="animation-delay: 0.5s">
            <div class="card-body text-center">
                <div class="report-icon stats-icon mb-3">
                    <i class="bi bi-bar-chart-line fa-2x"></i>
                </div>
                <h5 class="card-title">Statistiques Générales</h5>
                <p class="card-text text-muted">
                    Tableaux de bord et statistiques d'activité globale
                </p>
                <a href="/reports/statistics" class="report-btn btn-outline-primary">
                    Consulter <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>
</div>
                <i class="bi bi-box"></i>
                <h6>Aucune consommation trouv√©e</h6>
                <p>Aucun mat√©riau consomm√© dans cette p√©riode</p>
            </div>
        <% } %>
    </div>
</div>

<script>
<% if (report.length > 0) { %>
// Graphiques de consommation
document.addEventListener('DOMContentLoaded', function() {
    const reportData = <%- JSON.stringify(report) %>;
    
    // Graphique par cat√©gorie
    const categoryCtx = document.getElementById('categoryChart').getContext('2d');
    const categoryData = reportData.reduce((acc, item) => {
        const category = item.category === 'consumable' ? 'Consommables' : 'Patients';
        if (!acc[category]) acc[category] = 0;
        acc[category] += item.totalValue;
        return acc;
    }, {});
    
    new Chart(categoryCtx, {
        type: 'doughnut',
        data: {
            labels: Object.keys(categoryData),
            datasets: [{
                data: Object.values(categoryData),
                backgroundColor: ['#6c757d', '#007bff'],
                borderWidth: 2,
                borderColor: '#fff'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });
    
    // Top 5 mat√©riaux
    const topMaterialsCtx = document.getElementById('topMaterialsChart').getContext('2d');
    const topMaterials = reportData.slice(0, 5);
    
    new Chart(topMaterialsCtx, {
        type: 'bar',
        data: {
            labels: topMaterials.map(item => item.materialName),
            datasets: [{
                label: 'Valeur (DZD)',
                data: topMaterials.map(item => item.totalValue),
                backgroundColor: 'rgba(255, 193, 7, 0.8)',
                borderColor: 'rgba(255, 193, 7, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        callback: function(value) {
                            return new Intl.NumberFormat('fr-DZ', { 
                                style: 'currency', 
                                currency: 'DZD' 
                            }).format(value);
                        }
                    }
                }
            }
        }
    });

    // Animation des chiffres au scroll
    const animateNumbers = () => {
        document.querySelectorAll('.kpi-value').forEach(element => {
            const targetText = element.textContent.trim();
            if (targetText === '0' || targetText === '') return; // Skip zeros and empty values
            
            let isCurrency = false;
            let currencySymbol = '';
            let target = 0;
            
            if (targetText.includes('DZD')) {
                isCurrency = true;
                // Extract numeric value from currency string like "1 234,56 DZD"
                const numericPart = targetText.replace(/[^\d,]/g, '').replace(',', '.');
                target = parseFloat(numericPart);
                currencySymbol = ' DZD';
            } else {
                target = parseInt(targetText.replace(/\D/g, ''));
            }
            
            if (!target) return;

            let current = 0;
            const increment = target / 50;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                
                if (isCurrency) {
                    // Format as currency during animation
                    element.textContent = new Intl.NumberFormat('fr-DZ', { 
                        style: 'currency', 
                        currency: 'DZD',
                        maximumFractionDigits: 0 
                    }).format(Math.floor(current));
                } else {
                    element.textContent = Math.floor(current);
                }
            }, 30);
        });
    };

    // Observer pour d√©clencher l'animation
    const animationObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                animateNumbers();
                animationObserver.unobserve(entry.target);
            }
        });
    });

    document.querySelectorAll('.kpi-card').forEach(el => {
        animationObserver.observe(el);
    });
});
<% } %>
</script>
<% layout('layouts/boilerplate') %>
<!-- views/surgeons/index.ejs -->
<div class="material-page-header">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title mb-0">Gestion des Chirurgiens</h1>
                <p class="page-subtitle">Configuration complète des profils chirurgiens et contrats d'intervention</p>
            </div>
            <% if (permissions.canManageData) { %>
            <div class="d-flex gap-2">
                <a href="/surgeons/new" class="action-button">
                    <i class="bi bi-plus-circle"></i>Nouveau Chirurgien
                </a>
                <div class="dropdown">
                    <button class="action-button dropdown-toggle" type="button" id="excelDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-file-earmark-spreadsheet"></i>Import Excel
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="excelDropdown">
                        <li><a class="dropdown-item" href="/surgeons/template" target="_blank">
                            <i class="bi bi-download me-2"></i>Télécharger Modèle
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#" onclick="showImportModal()">
                            <i class="bi bi-upload me-2"></i>Importer Fichier
                        </a></li>
                    </ul>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>

<div class="container">
    <!-- Filtres -->
    <div class="material-filters">
        <h5 class="filter-title">
            <i class="bi bi-funnel"></i>Filtres et Recherche
        </h5>
        <form method="GET" class="row g-3">
            <div class="col-md-10">
                <label class="form-label">Recherche</label>
                <input type="text" name="search" class="form-control" placeholder="Nom ou spécialité du chirurgien..." value="<%= typeof search !== 'undefined' ? search : '' %>">
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-search"></i>
                    </button>
                    <a href="/surgeons" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Liste des chirurgiens -->
    <div class="material-card">
        <div class="card-header">
            <h5 class="card-title">
                <i class="bi bi-list-ul"></i>Liste des Chirurgiens
                <span class="badge bg-light text-primary ms-2"><%= surgeons.length %></span>
            </h5>
        </div>
        <div class="card-body">
            <% if (surgeons && surgeons.length > 0) { %>
                <div class="material-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Nom</th>
                                <th>Spécialité</th>
                                <% if (permissions.canSeeContractInfo) { %>
                                <th>Contrat</th>
                                <% } %>
                                <th>Créé par</th>
                                <th>Modifié par</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% surgeons.forEach(surgeon => { %>
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary"><%= surgeon.code %></span>
                                    </td>
                                    <td>
                                        <div class="material-name">
                                            <div class="material-avatar">
                                                <i class="bi bi-person"></i>
                                            </div>
                                            <div class="material-details">
                                                <h6>Dr. <%= surgeon.lastName %> <%= surgeon.firstName %></h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info"><%= surgeon.specialty.name %></span>
                                    </td>
                                    <% if (permissions.canSeeContractInfo) { %>
                                    <td>
                                        <% if (surgeon.contractType === 'location') { %>
                                            <span class="badge bg-secondary">location</span>
                                        <% } else { %>
                                            <span class="badge bg-primary">Pourcentage</span>
                                        <% } %>
                                    </td>
                                    <% } %>
                                    <td>
                                        <small>
                                            <% if (surgeon.createdBy) { %>
                                                <%= surgeon.createdBy.firstname %> <%= surgeon.createdBy.lastname %>
                                                <br>
                                                <span class="text-muted"><%= typeof moment !== 'undefined' ? moment(surgeon.createdAt).format('DD/MM/YYYY HH:mm') : '' %></span>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </small>
                                    </td>
                                    <td>
                                        <small>
                                            <% if (surgeon.updatedBy) { %>
                                                <%= surgeon.updatedBy.firstname %> <%= surgeon.updatedBy.lastname %>
                                                <br>
                                                <span class="text-muted"><%= typeof moment !== 'undefined' ? moment(surgeon.updatedAt).format('DD/MM/YYYY HH:mm') : '' %></span>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </small>
                                    </td>
                                    <td>
                                        <% if (permissions.canManageData) { %>
                                        <div class="material-actions">
                                            <a href="/surgeons/<%= surgeon._id %>" class="btn btn-outline-primary btn-sm" title="Voir">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/surgeons/<%= surgeon._id %>/edit" class="btn btn-outline-warning btn-sm" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger btn-sm" onclick="deleteSurgeon('<%= surgeon._id %>')" title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                        <% } else { %>
                                        <span class="text-muted">-</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="material-empty-state">
                    <div class="empty-icon">
                        <i class="bi bi-person-badge"></i>
                    </div>
                    <h5 class="empty-title">Aucun chirurgien trouvé</h5>
                    <p class="empty-description">Commencez par ajouter des chirurgiens à votre équipe pour gérer efficacement les interventions chirurgicales</p>
                    <% if (permissions.canManageData) { %>
                    <a href="/surgeons/new" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>Ajouter le premier chirurgien
                    </a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Import Modal -->
<div class="modal fade surgeon-modal" id="importModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title">
                    <i class="bi bi-upload"></i>Importer Chirurgiens depuis Excel
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="importForm" method="POST" action="/surgeons/import" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="alert alert-info d-flex justify-content-between align-items-center" role="alert">
                        <div>
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Besoin d'un modèle ?</strong> Téléchargez le fichier Excel pré-formaté avec des exemples.
                        </div>
                        <div>
                            <a href="/surgeons/template" class="btn btn-sm btn-outline-primary" download>
                                <i class="bi bi-cloud-download me-1"></i>Télécharger Modèle
                            </a>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="excelFileInput" class="form-label required-field">Fichier Excel</label>
                        <div class="input-group">
                            <input type="file" class="form-control" id="excelFileInput" name="excelFile" accept=".xlsx,.xls" required>
                            <span class="input-group-text">
                                <i class="bi bi-file-earmark-spreadsheet"></i>
                            </span>
                        </div>
                        <small class="form-text text-muted d-block mt-2">
                            Formats acceptés: .xlsx, .xls | Taille maximale: 5 MB
                        </small>
                    </div>

                    <div class="alert alert-warning" role="alert">
                        <strong><i class="bi bi-exclamation-triangle me-2"></i>Format du fichier Excel:</strong>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <strong>Colonnes requises:</strong>
                                <ul class="mb-0 mt-1 small">
                                    <li><strong>Prénom</strong> - Prénom du chirurgien</li>
                                    <li><strong>Nom</strong> - Nom du chirurgien</li>
                                    <li><strong>Spécialité</strong> - Spécialité chirurgicale</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <strong>Colonnes optionnelles:</strong>
                                <ul class="mb-0 mt-1 small">
                                    <li><strong>Code</strong> - Identifiant unique (auto-généré si vide)</li>
                                    <li>Date de Naissance - Format: YYYY-MM-DD</li>
                                    <li>Téléphone - Numéro de contact</li>
                                    <li>Type de Contrat - location ou percentage</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-light border" role="alert">
                        <small class="text-muted">
                            <i class="bi bi-lightbulb me-1"></i>
                            <strong>Gestion du Code:</strong>
                            <ul class="mb-0 ms-3 mt-2">
                                <li>Si vous spécifiez un code → il sera utilisé (ex: CH-001, MED-2024, etc.)</li>
                                <li>Si la colonne Code est vide → sera auto-généré au format SR-XXXXX (SR-00001, SR-00002, etc.)</li>
                                <li>Les codes doivent être uniques dans le système</li>
                            </ul>
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i>Annuler
                    </button>
                    <button type="submit" class="btn btn-primary" id="importBtn">
                        <i class="bi bi-upload me-1"></i>Importer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function deleteSurgeon(id) {
    if (confirmDelete('Êtes-vous sûr de vouloir supprimer ce chirurgien ?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/surgeons/' + id + '?_method=DELETE';
        document.body.appendChild(form);
        form.submit();
    }
}

function showImportModal() {
    const modal = new bootstrap.Modal(document.getElementById('importModal'));
    modal.show();
}
</script>
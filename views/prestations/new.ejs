<% layout('layouts/boilerplate') %>
<!-- views/prestations/new.ejs -->
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-plus-circle me-2"></i>Nouvelle Prestation
                </h5>
            </div>
            <div class="card-body">
                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                <form method="POST" action="/prestations">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="code" class="form-label">Code *</label>
                                <input type="text" class="form-control" id="code" name="code" value="<%= prestation.code || '' %>" required>
                                <div class="form-text">Code unique pour identifier la prestation</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="specialty" class="form-label">Spécialité *</label>
                                <select name="specialty" id="specialty" class="form-select" required>
                                    <option value="">Sélectionner une spécialité</option>
                                    <% specialties.forEach(specialty => { %>
                                        <option value="<%= specialty._id %>" <%= prestation.specialty === specialty._id ? 'selected' : '' %>>
                                            <%= specialty.name %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="designation" class="form-label">Désignation *</label>
                        <input type="text" class="form-control" id="designation" name="designation" value="<%= prestation.designation || '' %>" required>
                        <div class="form-text">Nom complet de l'intervention chirurgicale</div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="priceHT" class="form-label">Prix HT (DA) *</label>
                                <input type="number" class="form-control" id="priceHT" name="priceHT" value="<%= prestation.priceHT || '' %>" min="0" step="0.01" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="tva" class="form-label">TVA *</label>
                                <select name="tva" id="tva" class="form-select" required>
                                    <option value="0" <%= prestation.tva === 0 ? 'selected' : '' %>>0% (Exonéré)</option>
                                    <option value="0.09" <%= !prestation.tva || prestation.tva === 0.09 ? 'selected' : '' %>>9% (Standard)</option>
                                    <option value="0.19" <%= prestation.tva === 0.19 ? 'selected' : '' %>>19%</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="duration" class="form-label">Durée (minutes) *</label>
                                <input type="number" class="form-control" id="duration" name="duration" value="<%= prestation.duration || '' %>" min="1" required>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Gestion des dépassements -->
                    <div class="card mb-4">
                        <div class="card-header bg-warning text-dark">
                            <h6 class="mb-0"><i class="bi bi-clock-history me-2"></i>Gestion des Dépassements de Durée</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label for="exceededDurationUnit" class="form-label">Unité de dépassement (minutes)</label>
                                        <input type="number" class="form-control" id="exceededDurationUnit" name="exceededDurationUnit" 
                                               value="<%= prestation.exceededDurationUnit || 15 %>" min="1">
                                        <div class="form-text">Par tranche de combien de minutes facturer le dépassement</div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label for="exceededDurationFee" class="form-label">Frais par unité (DA)</label>
                                        <input type="number" class="form-control" id="exceededDurationFee" name="exceededDurationFee" 
                                               value="<%= prestation.exceededDurationFee || 0 %>" min="0" step="0.01">
                                        <div class="form-text">Montant facturé par tranche de dépassement</div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label for="urgentFee" class="form-label">Frais Urgents (DA)</label>
                                        <input type="number" class="form-control" id="urgentFee" name="urgentFee" 
                                               value="<%= prestation.urgentFee || 0 %>" min="0" step="0.01">
                                        <div class="form-text">Frais supplémentaires pour les chirurgies urgentes</div>
                                    </div>
                                </div>
                            </div>
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>Exemple :</strong> Si la durée prévue est dépassée de 25 minutes avec une unité de 15 min et des frais de 500 DA,
                                le supplément sera de 2 × 500 = 1000 DA (2 tranches de 15 min).
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/prestations" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Retour
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-2"></i>Enregistrer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

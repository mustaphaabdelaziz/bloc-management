<% layout('layouts/boilerplate') %>
<!-- views/prestations/edit.ejs -->
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="bi bi-pencil me-2"></i>Modifier Prestation
                </h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/prestations/<%= prestation._id %>?_method=PUT">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="code" class="form-label">Code *</label>
                                <input type="text" class="form-control" id="code" name="code" value="<%= prestation.code %>" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="specialty" class="form-label">Spécialité *</label>
                                <select name="specialty" id="specialty" class="form-select" required>
                                    <% specialties.forEach(specialty => { %>
                                        <option value="<%= specialty._id %>" <%= prestation.specialty._id.toString() === specialty._id.toString() ? 'selected' : '' %>>
                                            <%= specialty.name %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="designation" class="form-label">Désignation *</label>
                        <input type="text" class="form-control" id="designation" name="designation" value="<%= prestation.designation %>" required>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="priceHT" class="form-label">Prix HT (DA) *</label>
                                <input type="number" class="form-control" id="priceHT" name="priceHT" value="<%= prestation.priceHT %>" min="0" step="0.01" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="tva" class="form-label">TVA *</label>
                                <select name="tva" id="tva" class="form-select" required>
                                    <option value="0" <%= prestation.tva === 0 ? 'selected' : '' %>>0% (Exonéré)</option>
                                    <option value="0.09" <%= prestation.tva === 0.09 ? 'selected' : '' %>>9%</option>
                                    <option value="0.19" <%= prestation.tva === 0.19 ? 'selected' : '' %>>19% (Standard)</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="duration" class="form-label">Durée (minutes) *</label>
                                <input type="number" class="form-control" id="duration" name="duration" value="<%= prestation.duration %>" min="1" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card mb-4">
                        <div class="card-header bg-warning text-dark">
                            <h6 class="mb-0">Gestion des Dépassements</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="exceededDurationUnit" class="form-label">Unité de dépassement (minutes)</label>
                                        <input type="number" class="form-control" id="exceededDurationUnit" name="exceededDurationUnit" 
                                               value="<%= prestation.exceededDurationUnit %>" min="1">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="exceededDurationFee" class="form-label">Frais par unité (DA)</label>
                                        <input type="number" class="form-control" id="exceededDurationFee" name="exceededDurationFee" 
                                               value="<%= prestation.exceededDurationFee %>" min="0" step="0.01">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/prestations/<%= prestation._id %>" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Annuler
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save me-2"></i>Sauvegarder
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% layout('layouts/boilerplate') %>
<!-- views/prestations/edit.ejs -->
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="prestation-card">
            <div class="prestation-header">
                <div class="d-flex align-items-center">
                    <div class="prestation-avatar me-3">
                        <i class="bi bi-pencil"></i>
                    </div>
                    <div>
                        <h3 class="prestation-title">Modifier Prestation</h3>
                        <p class="prestation-subtitle"><%= prestation.designation %></p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form method="POST" action="/prestations/<%= prestation._id %>?_method=PUT" class="prestation-form">
                    <!-- Section Informations Principales -->
                    <div class="form-section mb-4">
                        <h5 class="section-title mb-3">
                            <i class="bi bi-info-circle me-2 text-primary"></i>
                            Informations Principales
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="specialty" class="form-label">
                                        <i class="bi bi-tag me-1"></i>Spécialité *
                                    </label>
                                    <select name="specialty" id="specialty" class="form-select" required>
                                        <% specialties.forEach(specialty => { %>
                                            <option value="<%= specialty._id %>" <%= prestation.specialty._id.toString() === specialty._id.toString() ? 'selected' : '' %>>
                                                <%= specialty.name %>
                                            </option>
                                        <% }); %>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="designation" class="form-label">
                                        <i class="bi bi-clipboard-check me-1"></i>Désignation *
                                    </label>
                                    <input type="text" class="form-control" id="designation" name="designation" value="<%= prestation.designation %>" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label for="family" class="form-label">
                                        <i class="bi bi-collection me-1"></i>Famille
                                    </label>
                                    <select class="form-select" id="family" name="family">
                                        <option value="">Aucune famille</option>
                                        <% families.forEach(family => { %>
                                            <option value="<%= family._id %>" data-specialty="<%= family.specialty._id %>" <%= prestation.family && prestation.family._id && prestation.family._id.toString() === family._id.toString() ? 'selected' : '' %>>
                                                <%= family.name %> (<%= family.specialty.name %>)
                                            </option>
                                        <% }); %>
                                    </select>
                                    <div class="form-text">Famille au sein de la spécialité (optionnel)</div>
                                    <small class="text-muted d-block mt-1">
                                        <i class="bi bi-info-circle me-1"></i>
                                        <a href="/families/new" target="_blank">Créer une nouvelle famille</a> si nécessaire
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Section Tarification et Durée -->
                    <div class="form-section mb-4">
                        <h5 class="section-title mb-3">
                            <i class="bi bi-cash-coin me-2 text-success"></i>
                            Tarification et Durée
                        </h5>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="priceHT" class="form-label">
                                        <i class="bi bi-currency-dollar me-1"></i>Prix HT (DA) *
                                    </label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" id="priceHT" name="priceHT" value="<%= prestation.priceHT %>" min="0" step="0.01" required>
                                        <span class="input-group-text">DA</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="tva" class="form-label">
                                        <i class="bi bi-percent me-1"></i>TVA *
                                    </label>
                                    <select name="tva" id="tva" class="form-select" required>
                                        <option value="0" <%= prestation.tva === 0 ? 'selected' : '' %>>0% (Exonéré)</option>
                                        <option value="0.09" <%= prestation.tva === 0.09 ? 'selected' : '' %>>9% (Standard)</option>
                                        <option value="0.19" <%= prestation.tva === 0.19 ? 'selected' : '' %>>19%</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label for="minDuration" class="form-label">
                                        <i class="bi bi-arrow-down-short me-1"></i>Durée Min (minutes) *
                                    </label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" id="minDuration" name="minDuration" value="<%= prestation.minDuration || '' %>" min="1" required>
                                        <span class="input-group-text">min</span>
                                    </div>
                                    <div class="form-text">Durée minimale</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label for="maxDuration" class="form-label">
                                        <i class="bi bi-arrow-up-short me-1"></i>Durée Max (minutes) *
                                    </label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" id="maxDuration" name="maxDuration" value="<%= prestation.maxDuration || '' %>" min="1" required>
                                        <span class="input-group-text">min</span>
                                    </div>
                                    <div class="form-text">Durée maximale (calcul honoraires)</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Section Gestion des Dépassements -->
                    <div class="form-section mb-4">
                        <div class="card border-warning">
                            <div class="card-header bg-gradient-warning text-dark">
                                <h6 class="mb-0">
                                    <i class="bi bi-clock-history me-2"></i>
                                    Gestion des Dépassements de Durée
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="exceededDurationUnit" class="form-label">
                                                <i class="bi bi-stopwatch me-1"></i>Unité de dépassement (minutes)
                                            </label>
                                            <div class="input-group">
                                                <input type="number" class="form-control" id="exceededDurationUnit" name="exceededDurationUnit"
                                                       value="<%= prestation.exceededDurationUnit %>" min="1">
                                                <span class="input-group-text">min</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="exceededDurationTolerance" class="form-label">
                                                <i class="bi bi-hourglass-split me-1"></i>Marge de tolérance (minutes)
                                                <% if (permissions.isAdmin || permissions.isDirection) { %>
                                                    <span class="badge bg-info ms-1">Admin/Direction</span>
                                                <% } %>
                                            </label>
                                            <div class="input-group">
                                                <input type="number" class="form-control" id="exceededDurationTolerance" name="exceededDurationTolerance"
                                                       value="<%= prestation.exceededDurationTolerance || 15 %>" min="0"
                                                       <%= !(permissions.isAdmin || permissions.isDirection) ? 'readonly' : '' %>>
                                                <span class="input-group-text">min</span>
                                            </div>
                                            <div class="form-text">Dépassement toléré avant facturation</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="exceededDurationFee" class="form-label">
                                                <i class="bi bi-cash me-1"></i>Frais par unité (DA)
                                            </label>
                                            <div class="input-group">
                                                <input type="number" class="form-control" id="exceededDurationFee" name="exceededDurationFee"
                                                       value="<%= prestation.exceededDurationFee %>" min="0" step="0.01">
                                                <span class="input-group-text">DA</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="urgentFeePercentage" class="form-label">
                                                <i class="bi bi-exclamation-triangle me-1"></i>Frais Urgents (%)
                                            </label>
                                            <div class="input-group">
                                                <input type="number" class="form-control" id="urgentFeePercentage" name="urgentFeePercentage"
                                                       value="<%= (prestation.urgentFeePercentage * 100) || 0 %>" min="0" max="100" step="0.01">
                                                <span class="input-group-text">%</span>
                                            </div>
                                            <div class="form-text">Pourcentage du prix HT pour les chirurgies urgentes (ex: 10 pour 10%)</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/prestations/<%= prestation._id %>" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Annuler
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save me-2"></i>Sauvegarder
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
// Filter families based on selected specialty
document.getElementById('specialty').addEventListener('change', function() {
    const selectedSpecialty = this.value;
    const familySelect = document.getElementById('family');
    const allOptions = familySelect.querySelectorAll('option');
    
    allOptions.forEach(option => {
        if (option.value === '') {
            // Always show "Aucune famille" option
            option.style.display = 'block';
        } else {
            const familySpecialty = option.getAttribute('data-specialty');
            if (selectedSpecialty === '' || familySpecialty === selectedSpecialty) {
                option.style.display = 'block';
            } else {
                option.style.display = 'none';
            }
        }
    });
    
    // Reset family selection if current selection is not valid for new specialty
    const currentOption = familySelect.options[familySelect.selectedIndex];
    if (currentOption && currentOption.value !== '' && currentOption.style.display === 'none') {
        familySelect.value = '';
    }
});

// Trigger on page load to filter based on pre-selected specialty
document.addEventListener('DOMContentLoaded', function() {
    const specialtySelect = document.getElementById('specialty');
    if (specialtySelect.value) {
        specialtySelect.dispatchEvent(new Event('change'));
    }
});
</script>
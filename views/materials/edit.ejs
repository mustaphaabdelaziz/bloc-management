<script>
// Form validation on submit
document.getElementById('editMaterialForm').addEventListener('submit', function(e) {
    let isValid = true;
    const priceHTInput = document.getElementById('priceHT');
    const markupInput = document.getElementById('sellingMarkupPercent');
    const priceHTError = document.getElementById('priceHTError');
    const markupError = document.getElementById('markupError');
    
    // Clear previous errors
    priceHTError.classList.add('d-none');
    markupError.classList.add('d-none');
    priceHTInput.classList.remove('is-invalid');
    markupInput.classList.remove('is-invalid');
    
    // Validate price
    const priceValue = parseFloat(priceHTInput.value);
    if (isNaN(priceValue) || priceValue < 0) {
        priceHTError.classList.remove('d-none');
        priceHTInput.classList.add('is-invalid');
        isValid = false;
    }
    
    // Validate markup (optional but must be >= 0 if provided)
    const markupValue = parseFloat(markupInput.value);
    if (!isNaN(markupValue) && markupValue < 0) {
        markupError.classList.remove('d-none');
        markupInput.classList.add('is-invalid');
        isValid = false;
    }
    
    if (!isValid) {
        e.preventDefault();
        return false;
    }
});
</script>

<script>
// Update estimated selling price when markup changes
document.getElementById('sellingMarkupPercent')?.addEventListener('input', function() {
    const basePrice = <%= material.effectivePurchasePrice || material.priceHT || 0 %>;
    const markup = parseFloat(this.value) || 0;
    const sellingPrice = basePrice * (1 + markup / 100);
    document.getElementById('estimatedSellingPrice').textContent = 
        new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(sellingPrice);
});
</script>


<% layout('layouts/boilerplate') %>
<!-- views/materials/new.ejs -->
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="bi bi-plus-circle me-2"></i>Nouveau Matériau
                </h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/materials">
                    <div class="row">
                    <div class="row">
                      
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="category" class="form-label">Catégorie *</label>
                                <select name="category" id="category" class="form-select" required>
                                    <option value="">Sélectionner une catégorie</option>
                                    <option value="consumable" <%= material.category === 'consumable' ? 'selected' : '' %>>
                                        Consommable (jetable)
                                    </option>
                                    <option value="patient" <%= material.category === 'patient' ? 'selected' : '' %>>
                                        Matériel patient (implant)
                                    </option>
                                </select>
                                <div class="form-text">
                                    <strong>Consommable :</strong> matériel à usage unique (gants, fils, etc.)<br>
                                    <strong>Patient :</strong> matériel implanté ou attaché au patient (prothèses, plaques, etc.)
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="designation" class="form-label">Désignation *</label>
                        <input type="text" class="form-control" id="designation" name="designation" value="<%= material.designation || '' %>" required>
                        <div class="form-text">Nom complet du matériau</div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="priceHT" class="form-label">Prix HT (DA) *</label>
                                <input type="number" class="form-control" id="priceHT" name="priceHT" value="<%= material.priceHT || '' %>" min="0" step="0.01" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="tva" class="form-label">TVA *</label>
                                <select name="tva" id="tva" class="form-select" required>
                                    <option value="0" <%= material.tva === 0 ? 'selected' : '' %>>0% (Exonéré)</option>
                                    <option value="0.09" <%= material.tva === 0.09 ? 'selected' : '' %>>9%</option>
                                    <option value="0.19" <%= !material.tva || material.tva === 0.19 ? 'selected' : '' %>>19% (Standard)</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="unitOfMeasure" class="form-label">Unité de mesure *</label>
                                <input type="text" class="form-control" id="unitOfMeasure" name="unitOfMeasure" value="<%= material.unitOfMeasure || '' %>" required>
                                <div class="form-text">Ex: pièce, boîte, ml, kg, etc.</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="specialty" class="form-label">Spécialité</label>
                                <select name="specialty" id="specialty" class="form-select">
                                    <option value="" data-code="GEN">Matériau général (toutes spécialités)</option>
                                    <% specialties.forEach(specialty => { %>
                                        <option value="<%= specialty._id %>" data-code="<%= specialty.code %>" <%= material.specialty === specialty._id ? 'selected' : '' %>>
                                            <%= specialty.name %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="stock" class="form-label">Stock initial</label>
                                <input type="number" class="form-control" id="stock" name="stock" value="<%= material.stock || 0 %>" min="0" step="0.01">
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/materials" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Retour
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save me-2"></i>Enregistrer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
// Update code preview when specialty changes
document.getElementById('specialty').addEventListener('change', function() {
    const specialtySelect = this;
    const selectedOption = specialtySelect.options[specialtySelect.selectedIndex];
    const specialtyCode = selectedOption.getAttribute('data-code') || 'GEN';
    const codeField = document.getElementById('code');
    
    // Show preview of what the code will look like
    codeField.value = `MAT-${specialtyCode}-XXX (sera généré automatiquement)`;
});

// Initialize code preview on page load
document.addEventListener('DOMContentLoaded', function() {
    const specialtySelect = document.getElementById('specialty');
    if (specialtySelect) {
        const selectedOption = specialtySelect.options[specialtySelect.selectedIndex];
        const specialtyCode = selectedOption ? (selectedOption.getAttribute('data-code') || 'GEN') : 'GEN';
        const codeField = document.getElementById('code');
        
        if (codeField && !codeField.value) {
            codeField.value = `MAT-${specialtyCode}-XXX (sera généré automatiquement)`;
        }
    }
});
</script>
<% layout('layouts/boilerplate') %>
<!-- views/materials/index.ejs -->
<div class="material-page-header">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title mb-0">Gestion des Matériaux</h1>
                <p class="page-subtitle">Stock et suivi des matériaux médicaux</p>
            </div>
            <% if (permissions.canManageMaterials) { %>
            <div class="d-flex gap-2">
                <a href="/materials/new" class="action-button">
                    <i class="bi bi-plus-circle"></i>Nouveau Matériau
                </a>
                <div class="dropdown">
                    <button class="action-button dropdown-toggle" type="button" id="excelDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-file-earmark-spreadsheet"></i>Import Excel
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="excelDropdown">
                        <li><a class="dropdown-item" href="/materials/template" target="_blank">
                            <i class="bi bi-download me-2"></i>Télécharger Modèle
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#" onclick="showImportModal()">
                            <i class="bi bi-upload me-2"></i>Importer Fichier
                        </a></li>
                    </ul>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>

<div class="container">
    <!-- Filtres -->
    <div class="material-filters">
        <h5 class="filter-title">
            <i class="bi bi-funnel"></i>Filtres et Recherche
        </h5>
        <form method="GET" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Catégorie</label>
                <select name="category" class="form-select">
                    <option value="">Toutes les catégories</option>
                    <option value="consumable" <%= filters.category === 'consumable' ? 'selected' : '' %>>Consommables</option>
                    <option value="patient" <%= filters.category === 'patient' ? 'selected' : '' %>>Matériels patients</option>
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Recherche</label>
                <input type="text" name="search" class="form-control" placeholder="Nom ou code du matériau..." value="<%= filters.search %>">
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-search"></i>
                    </button>
                    <a href="/materials" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Liste des matériaux -->
    <div class="material-card">
        <div class="card-header">
            <h5 class="card-title">
                <i class="bi bi-list-ul"></i>Liste des Matériaux
                <span class="badge bg-light text-primary ms-2"><%= materials.length %></span>
            </h5>
        </div>
        <div class="card-body">
            <% if (materials.length > 0) { %>
                <div class="material-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Matériau</th>
                                <th>Référence</th>
                                <th>Catégorie</th>
                                <% if (permissions.canViewPricing) { %>
                                <th>Prix Moyen Pondéré</th>
                                <% } %>
                                <th>Spécialité</th>
                                <th>Créé par</th>
                                <th>Modifié par</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% materials.forEach(material => { %>
                                <tr>
                                    <td>
                                        <div class="material-name">
                                            <div class="material-avatar">
                                                <i class="bi bi-box"></i>
                                            </div>
                                            <div class="material-details">
                                                <h6><%= material.designation %></h6>
                                                <small>Code: <%= material.code %></small>
                                                <% if (material.brand) { %>
                                                    <div class="brand-badge"><%= material.brand %></div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <% if (material.reference) { %>
                                            <small class="text-muted"><%= material.reference %></small>
                                        <% } else { %>
                                            <span class="text-muted">-</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (material.category === 'consumable') { %>
                                            <span class="badge bg-secondary">Consommable</span>
                                        <% } else { %>
                                            <span class="badge bg-primary">Patient</span>
                                        <% } %>
                                    </td>
                                    <% if (permissions.canViewPricing) { %>
                                    <td>
                                        <div class="fw-bold text-info">
                                            <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(material.weightedPrice) %>
                                        </div>
                                        <small class="text-muted">par <%= material.unitOfMeasure %></small>
                                    </td>
                                    <% } %>
                                    <td>
                                        <% if (material.appliesToAllSpecialties) { %>
                                            <span class="badge bg-success"><i class="bi bi-globe"></i> Toutes</span>
                                        <% } else if (material.specialty && Array.isArray(material.specialty) && material.specialty.length > 0) { %>
                                            <div class="specialty-badges">
                                                <% material.specialty.forEach(spec => { %>
                                                    <span class="badge bg-info"><%= spec.name %></span>
                                                <% }); %>
                                            </div>
                                        <% } else if (material.specialty && !Array.isArray(material.specialty)) { %>
                                            <span class="badge bg-info"><%= material.specialty.name %></span>
                                        <% } else { %>
                                            <span class="text-muted small">Général</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <small>
                                            <% if (material.createdBy) { %>
                                                <%= material.createdBy.firstname %> <%= material.createdBy.lastname %>
                                                <br>
                                                <span class="text-muted"><%= typeof moment !== 'undefined' ? moment(material.createdAt).format('DD/MM/YYYY HH:mm') : '' %></span>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </small>
                                    </td>
                                    <td>
                                        <small>
                                            <% if (material.updatedBy) { %>
                                                <%= material.updatedBy.firstname %> <%= material.updatedBy.lastname %>
                                                <br>
                                                <span class="text-muted"><%= typeof moment !== 'undefined' ? moment(material.updatedAt).format('DD/MM/YYYY HH:mm') : '' %></span>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </small>
                                    </td>
                                    <td>
                                        <% if (permissions.canManageMaterials) { %>
                                        <div class="material-actions">
                                            <a href="/materials/<%= material._id %>" class="btn btn-outline-primary btn-sm" title="Voir">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/materials/<%= material._id %>/edit" class="btn btn-outline-warning btn-sm" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-success btn-sm" onclick="showArrivalModal('<%= material._id %>')" title="Ajouter stock">
                                                <i class="bi bi-plus-square"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-danger btn-sm" onclick="deleteMaterial('<%= material._id %>')" title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                        <% } else { %>
                                        <span class="text-muted">-</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="material-empty-state">
                    <div class="empty-icon">
                        <i class="bi bi-box"></i>
                    </div>
                    <h5 class="empty-title">Aucun matériau trouvé</h5>
                    <p class="empty-description">Commencez par ajouter des matériaux à votre inventaire médical</p>
                    <a href="/materials/new" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>Ajouter le premier matériau
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Modal pour ajouter du stock -->
<div class="modal fade material-modal" id="arrivalModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success">
                <h5 class="modal-title">
                    <i class="bi bi-plus-square"></i>Ajouter Stock
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="arrivalForm" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="arrivalDate" class="form-label required-field">Date d'arrivage</label>
                        <input type="date" class="form-control" id="arrivalDate" name="date" required>
                    </div>
                    <div class="mb-3">
                        <label for="arrivalQuantity" class="form-label required-field">Quantité</label>
                        <input type="number" class="form-control" id="arrivalQuantity" name="quantity" min="1" step="0.01" required>
                    </div>
                    <div class="mb-3">
                        <label for="arrivalPrice" class="form-label required-field">Prix unitaire (DA)</label>
                        <input type="number" class="form-control" id="arrivalPrice" name="unitPrice" min="0" step="0.01" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-success">Ajouter Stock</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function deleteMaterial(id) {
    if (confirmDelete('Êtes-vous sûr de vouloir supprimer ce matériau ?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/materials/' + id + '?_method=DELETE';
        document.body.appendChild(form);
        form.submit();
    }
}

function showArrivalModal(materialId) {
    const form = document.getElementById('arrivalForm');
    form.action = '/materials/' + materialId + '/arrival';
    
    // Définir la date d'aujourd'hui par défaut
    document.getElementById('arrivalDate').value = new Date().toISOString().split('T')[0];
    
    const modal = new bootstrap.Modal(document.getElementById('arrivalModal'));
    modal.show();
}

function showImportModal() {
    const modal = new bootstrap.Modal(document.getElementById('importExcelModal'));
    modal.show();
}
</script>

<!-- Excel Import Modal -->
<div class="modal fade" id="importExcelModal" tabindex="-1" aria-labelledby="importExcelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importExcelModalLabel">
                    <i class="bi bi-file-earmark-spreadsheet me-2"></i>Importer Matériaux depuis Excel
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <form action="/materials/import" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="excelFile" class="form-label">Fichier Excel (.xlsx ou .xls)</label>
                        <input type="file" class="form-control" id="excelFile" name="excelFile" accept=".xlsx,.xls" required>
                        <div class="form-text">
                            Sélectionnez un fichier Excel contenant les matériaux à importer.
                            <a href="/materials/template" target="_blank" class="text-primary">Télécharger le modèle</a>
                        </div>
                    </div>
                    <div class="alert alert-warning" role="alert">
                        <strong><i class="bi bi-exclamation-triangle me-2"></i>Format du fichier Excel:</strong>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <strong>Colonnes requises:</strong>
                                <ul class="mb-0 mt-1 small">
                                    <li><strong>Désignation</strong> - Nom du matériau</li>
                                    <li><strong>Prix d'Achat HT</strong> - Prix unitaire</li>
                                    <li><strong>TVA</strong> - Taux de TVA</li>
                                    <li><strong>Catégorie</strong> - consumable ou patient</li>
                                    <li><strong>Unité de Mesure</strong> - Unité (pce, bt, etc.)</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <strong>Colonnes optionnelles:</strong>
                                <ul class="mb-0 mt-1 small">
                                    <li>Marge de Vente (%) - Pourcentage de marge</li>
                                    <li>Marque - Marque du fournisseur</li>
                                    <li>Spécialité - Spécialités applicables</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info border" role="alert">
                        <small>
                            <i class="bi bi-info-circle me-1"></i>
                            <strong>Note:</strong> Le code du matériau sera généré automatiquement au format MAT-{SPECIALITE}-XXX.
                            Ne pas fournir de code dans le fichier.
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-upload me-2"></i>Importer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
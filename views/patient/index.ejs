<% layout('layouts/boilerplate')%>
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="mb-0">Liste des Patients</h3>
        <p class="text-muted">Gestion et suivi des patients</p>
    </div>
    <a href="/patients/new" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Nouveau Patient
    </a>
</div>

<!-- Barre de recherche -->


<!-- Liste des patients -->
<div class="card">
    <div class="card-body">
        <% if (patients.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Code</th>
                            <th>Patient</th>
                            <th>NIN</th>
                            <th>Date de naissance</th>
                            <th>Téléphone</th>
                            <th>Créé le</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% patients.forEach(patient => { %>
                            <tr>
                                <td><strong><%= patient.code %></strong></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person-circle fa-2x text-primary me-3"></i>
                                        <div>
                                            <div class="fw-bold"><%= patient.firstName %> <%= patient.lastName %></div>
                                            <% if (patient.fatherName) { %>
                                                <small class="text-muted">Père: <%= patient.fatherName %></small>
                                            <% } %>
                                        </div>
                                    </div>
                                </td>
                                <td><%= patient.nin %></td>
                                <td>
                                    <% if (patient.dateOfBirth) { %>
                                        <%= moment(patient.dateOfBirth).format('DD/MM/YYYY') %>
                                        <small class="text-muted">(<%= moment().diff(patient.dateOfBirth, 'years') %> ans)</small>
                                    <% } else if (patient.presumedAge) { %>
                                        <span class="text-muted">~<%= patient.presumedAge %> ans</span>
                                    <% } else { %>
                                        <span class="text-muted">-</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (patient.phone) { %>
                                        <i class="bi bi-telephone me-1"></i><%= patient.phone %>
                                    <% } else { %>
                                        <span class="text-muted">-</span>
                                    <% } %>
                                </td>
                                <td><%= moment(patient.createdAt).format('DD/MM/YYYY') %></td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/patients/<%= patient._id %>" class="btn btn-sm btn-outline-primary" title="Voir">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="/patients/<%= patient._id %>/edit" class="btn btn-sm btn-outline-warning" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="deletePatient('<%= patient._id %>')" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <nav class="mt-4">
                    <ul class="pagination justify-content-center">
                        <% if (hasPrevPage) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= search %>">Précédent</a>
                            </li>
                        <% } %>
                        
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
                            </li>
                        <% } %>
                        
                        <% if (hasNextPage) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= search %>">Suivant</a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        <% } else { %>
            <div class="text-center py-5">
                <i class="bi bi-person-x fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Aucun patient trouvé</h5>
                <p class="text-muted">Commencez par ajouter un patient</p>
                <a href="/patients/new" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Ajouter le premier patient
                </a>
            </div>
        <% } %>
    </div>
</div>

<script>
function deletePatient(id) {
    if (confirmDelete('Êtes-vous sûr de vouloir supprimer ce patient ?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/patients/' + id + '?_method=DELETE';
        document.body.appendChild(form);
        form.submit();
    }
}
</script>



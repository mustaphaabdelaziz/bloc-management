<% layout('layouts/boilerplate') %>
<!-- views/patient/index.ejs -->
<div class="material-page-header">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title mb-0">Gestion des Patients</h1>
                <p class="page-subtitle">Suivi et gestion complète des informations patients</p>
            </div>
            <a href="/patients/new" class="action-button">
                <i class="bi bi-plus-circle"></i>Nouveau Patient
            </a>
        </div>
    </div>
</div>

<div class="container">
    <!-- Filtres -->
    <div class="material-filters">
        <h5 class="filter-title">
            <i class="bi bi-funnel"></i>Filtres et Recherche
        </h5>
        <form method="GET" class="row g-3" id="searchForm" onsubmit="return false;">
            <div class="col-md-8">
                <label class="form-label">Recherche</label>
                <input type="text" name="search" class="form-control" placeholder="Nom, prénom, NIN ou téléphone..." value="<%= typeof filters !== 'undefined' && filters.search ? filters.search : '' %>" id="searchInput" autocomplete="off">
            </div>
            <div class="col-md-4">
                <label class="form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-outline-primary" id="searchBtn">
                        <i class="bi bi-search"></i>
                    </button>
                    <a href="/patients" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Liste des patients -->
    <div class="material-card">
        <div class="card-header">
            <h5 class="card-title">
                <i class="bi bi-list-ul"></i>Liste des Patients
                <span class="badge bg-light text-primary ms-2"><%= patients.length %></span>
            </h5>
        </div>
        <div class="card-body">
            <% if (patients.length > 0) { %>
                <div class="material-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Patient</th>
                                <th>NIN</th>
                                <th>Naiss.</th>
                                <th>Tél.</th>
                                <th>Créé par</th>
                                <th>Modifié par</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% patients.forEach(patient => { %>
                                <tr>
                                    <td>
                                        <span class="badge bg-light text-dark fw-bold"><%= patient.code %></span>
                                    </td>
                                    <td>
                                        <div class="material-name">
                                            <div class="material-avatar">
                                                <i class="bi bi-person"></i>
                                            </div>
                                            <div class="material-details">
                                                <h6><%= patient.firstName %> <%= patient.lastName %></h6>
                                                <% if (patient.fatherName) { %>
                                                    <small>Fils de <%= patient.fatherName %></small>
                                                <% } %>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <%= patient.nin %>
                                    </td>
                                    <td>
                                        <% if (patient.dateOfBirth) { %>
                                            <%= typeof moment !== 'undefined' ? moment(patient.dateOfBirth).format('DD/MM/YYYY') : new Date(patient.dateOfBirth).toLocaleDateString('fr-FR') %>
                                        <% } else if (patient.birthdatePresumed) { %>
                                            ~<%= typeof moment !== 'undefined' ? moment().diff(patient.birthdatePresumed, 'years') : '' %> ans
                                            <small class="text-muted">(est. <%= typeof moment !== 'undefined' ? moment(patient.birthdatePresumed).format('YYYY') : '' %>)</small>
                                        <% } else if (patient.presumedAge) { %>
                                            ~<%= patient.presumedAge %> ans
                                        <% } else { %>
                                            -
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (patient.phone) { %>
                                            <%= patient.phone %>
                                        <% } else { %>
                                            <span class="text-muted">-</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <small>
                                            <% if (patient.createdBy) { %>
                                                <%= patient.createdBy.firstname %> <%= patient.createdBy.lastname %>
                                                <br>
                                                <span class="text-muted"><%= typeof moment !== 'undefined' ? moment(patient.createdAt).format('DD/MM/YYYY HH:mm') : '' %></span>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </small>
                                    </td>
                                    <td>
                                        <small>
                                            <% if (patient.updatedBy) { %>
                                                <%= patient.updatedBy.firstname %> <%= patient.updatedBy.lastname %>
                                                <br>
                                                <span class="text-muted"><%= typeof moment !== 'undefined' ? moment(patient.updatedAt).format('DD/MM/YYYY HH:mm') : '' %></span>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </small>
                                    </td>
                                    <td>
                                        <div class="material-actions">
                                            <a href="/patients/<%= patient._id %>" class="btn btn-outline-primary btn-sm" title="Voir">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/patients/<%= patient._id %>/edit" class="btn btn-outline-warning btn-sm" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger btn-sm" onclick="deletePatient('<%= patient._id %>')" title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="material-empty-state">
                    <div class="empty-icon">
                        <i class="bi bi-person"></i>
                    </div>
                    <h5 class="empty-title">Aucun patient trouvé</h5>
                    <p class="empty-description">Commencez par ajouter des patients à votre base de données</p>
                    <a href="/patients/new" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>Ajouter le premier patient
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script>
function deletePatient(id) {
    if (confirm('Êtes-vous sûr de vouloir supprimer ce patient ?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/patients/' + id + '?_method=DELETE';
        document.body.appendChild(form);
        form.submit();
    }
}
</script>

<script src="/js/live-search.js"></script>
<script>
// Initialize live search
initLiveSearch({
    searchInputId: 'searchInput',
    contentSelector: '.material-card .card-body',
    endpoint: '/patients'
});
</script>

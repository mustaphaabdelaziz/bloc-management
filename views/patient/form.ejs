<div class="row">
  <div class="col-md-6">
    <div class="mb-3">
      <label for="firstName" class="form-label">Prénom *</label>
      <input
        type="text"
        class="form-control"
        id="firstName"
        name="firstName"
        value="<%= patient.firstName || '' %>"
        required
      />
    </div>
  </div>
  <div class="col-md-6">
    <div class="mb-3">
      <label for="lastName" class="form-label">Nom *</label>
      <input
        type="text"
        class="form-control"
        id="lastName"
        name="lastName"
        value="<%= patient.lastName || '' %>"
        required
      />
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="mb-3">
      <label for="fatherName" class="form-label">Nom du père</label>
      <input
        type="text"
        class="form-control"
        id="fatherName"
        name="fatherName"
        value="<%= patient.fatherName || '' %>"
      />
    </div>
  </div>
  <div class="col-md-6">
    <div class="mb-3">
      <label for="nin" class="form-label"
        >NIN (Numéro d'Identification National) *</label
      >
      <input
        type="text"
        class="form-control"
        id="nin"
        name="nin"
        value="<%= patient.nin || '' %>"
        required
      />
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="mb-3">
      <label for="dateOfBirth" class="form-label">Date de naissance</label>
      <input
        type="date"
        class="form-control"
        id="dateOfBirth"
        name="dateOfBirth"
        value="<%= patient.dateOfBirth ? moment(patient.dateOfBirth).format('YYYY-MM-DD') : '' %>"
      />
    </div>
  </div>
  <div class="col-md-6">
    <div class="mb-3">
      <label for="presumedAge" class="form-label"
        >Âge présumé (si date inconnue)</label
      >
      <input
        type="number"
        class="form-control"
        id="presumedAge"
        name="presumedAge"
        value="<%= patient.presumedAge || '' %>"
        min="0"
        max="120"
      />
    </div>
  </div>
</div>

<div class="mb-3">
  <label for="phone" class="form-label">Téléphone</label>
  <input
    type="tel"
    class="form-control"
    id="phone"
    name="phone"
    value="<%= patient.phone || '' %>"
  />
</div>

<div class="d-flex justify-content-between">
  <a href="/patients" class="btn btn-secondary">
    <i class="bi bi-arrow-left me-2"></i>Retour
  </a>
  <button type="submit" class="btn btn-primary">
    <i class="bi bi-save me-2"></i>Modifier
  </button>
</div>

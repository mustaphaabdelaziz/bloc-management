<% layout('layouts/boilerplate')%>

<!-- views/patients/edit.ejs -->
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card patient-card">
            <div class="card-header bg-primary text-white patient-header">
                <h5 class="mb-0">
                    <i class="bi bi-pencil me-2"></i>Modifier Patient
                </h5>
            </div>
            <div class="card-body">
                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        <strong>Erreur:</strong> <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                
                <form method="POST" action="/patients/<%= patient._id %>?_method=PUT" class="patient-form">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="firstName" class="form-label"><i class="bi bi-person me-1"></i>Prénom *</label>
                                <input type="text" class="form-control" id="firstName" name="firstName" value="<%= patient.firstName %>" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="lastName" class="form-label"><i class="bi bi-person me-1"></i>Nom *</label>
                                <input type="text" class="form-control" id="lastName" name="lastName" value="<%= patient.lastName %>" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="fatherName" class="form-label"><i class="bi bi-person me-1"></i>Nom du père</label>
                                <input type="text" class="form-control" id="fatherName" name="fatherName" value="<%= patient.fatherName || '' %>">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="nin" class="form-label"><i class="bi bi-card-text me-1"></i>NIN</label>
                                <input type="text" class="form-control" id="nin" name="nin" value="<%= patient.nin %>">
                            </div>
                        </div>
                    </div>
                    
                    <!-- Birthdate Toggle Section -->
                    <div class="card mb-3 border-info">
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label fw-bold"><i class="bi bi-calendar-event me-1"></i>Date de naissance</label>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="birthdateKnownToggle" <%= patient.dateOfBirth ? 'checked' : '' %>>
                                    <label class="form-check-label" for="birthdateKnownToggle">
                                        Date de naissance complète connue
                                    </label>
                                </div>
                            </div>
                            
                            <!-- Full Birthdate Input -->
                            <div id="fullBirthdateSection" style="<%= patient.dateOfBirth ? '' : 'display:none;' %>">
                                <div class="mb-3">
                                    <label for="dateOfBirth" class="form-label"><i class="bi bi-calendar me-1"></i>Date de naissance complète</label>
                                    <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" 
                                           value="<%= patient.dateOfBirth ? moment(patient.dateOfBirth).format('YYYY-MM-DD') : '' %>">
                                </div>
                            </div>
                            
                            <!-- Presumed Age/Year Section -->
                            <div id="presumedSection" style="<%= patient.dateOfBirth ? 'display:none;' : '' %>">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="presumedAge" class="form-label"><i class="bi bi-question-circle me-1"></i>Âge présumé</label>
                                            <input type="number" class="form-control" id="presumedAge" name="presumedAge" 
                                                   value="<%= patient.presumedAge || '' %>" min="0" max="120" placeholder="Ex: 45">
                                            <small class="form-text text-muted">L'année sera calculée automatiquement</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="presumedYear" class="form-label"><i class="bi bi-calendar-year me-1"></i>Année présumée</label>
                                            <input type="number" class="form-control" id="presumedYear" name="presumedYear" 
                                                   value="<%= patient.birthdatePresumed ? moment(patient.birthdatePresumed).format('YYYY') : '' %>" 
                                                   min="1900" max="<%= new Date().getFullYear() %>" placeholder="Ex: 1979">
                                            <small class="form-text text-muted">L'âge sera calculé automatiquement</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="phone" class="form-label"><i class="bi bi-telephone me-1"></i>Téléphone</label>
                        <input type="tel" class="form-control" id="phone" name="phone" value="<%= patient.phone || '' %>">
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/patients/<%= patient._id %>" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Annuler
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save me-2"></i>Sauvegarder
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/patient.js"></script>

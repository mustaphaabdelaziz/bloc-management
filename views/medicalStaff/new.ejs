<% layout('layouts/boilerplate') %>
<!-- views/medicalStaff/new.ejs -->
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="bi bi-person-plus me-2"></i>Nouveau Personnel Médical
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <a href="/medical-staff" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Retour
                    </a>
                </div>
                <form method="POST" action="/medical-staff">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="code" class="form-label">Code *</label>
                                <input type="text" class="form-control" id="code" name="code" value="<%= staff.code || '' %>" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="firstName" class="form-label">Prénom *</label>
                                <input type="text" class="form-control" id="firstName" name="firstName" value="<%= staff.firstName || '' %>" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="lastName" class="form-label">Nom *</label>
                                <input type="text" class="form-control" id="lastName" name="lastName" value="<%= staff.lastName || '' %>" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="dateOfBirth" class="form-label">Date de naissance</label>
                                <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" 
                                       value="<%= staff.dateOfBirth ? moment(staff.dateOfBirth).format('YYYY-MM-DD') : '' %>">
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="phone" class="form-label">Téléphone</label>
                                <input type="tel" class="form-control" id="phone" name="phone" value="<%= staff.phone || '' %>">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="personalFee" class="form-label">
                                    Frais personnels - Taux horaire (DA/heure)
                                    <i class="bi bi-clock-history text-info ms-1" title="Tarif horaire pour les chirurgies en location"></i>
                                </label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="personalFee" name="personalFee" 
                                           value="<%= staff.personalFee || 0 %>" min="0" step="0.01" 
                                           placeholder="0.00">
                                    <span class="input-group-text">DA/h</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-text">
                            <i class="bi bi-info-circle text-primary"></i>
                            <strong>Tarif horaire</strong> facturé au chirurgien pour les interventions en régime d'location.
                            <br><small class="text-muted">
                                Le montant total sera calculé automatiquement : <strong>Taux horaire × Durée effective</strong>
                            </small>
                        </div>
                        
                        <!-- Live Calculation Preview -->
                        <div id="calculationPreview" class="mt-3 p-3 bg-light rounded d-none">
                            <h6 class="text-info mb-2">
                                <i class="bi bi-calculator me-1"></i>Aperçu du calcul
                            </h6>
                            <div class="row text-sm">
                                <div class="col-md-6">
                                    <strong>Pour une intervention de 2h :</strong><br>
                                    <span id="calc2h" class="text-success">0 DA</span>
                                </div>
                                <div class="col-md-6">
                                    <strong>Pour une intervention de 4h :</strong><br>
                                    <span id="calc4h" class="text-success">0 DA</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Fonctions -->
                    <div class="card mb-4">
                        <div class="card-header bg-secondary text-white">
                            <h6 class="mb-0"><i class="bi bi-person-workspace me-2"></i>Fonctions / Rôles</h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label">Sélectionner les fonctions *</label>
                                <div class="row">
                                    <% fonctions.forEach(fonction => { %>
                                        <div class="col-md-4 mb-2">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" 
                                                       name="fonctions" value="<%= fonction._id %>" 
                                                       id="fonction_<%= fonction._id %>"
                                                       <%= staff.fonctions && staff.fonctions.includes(fonction._id.toString()) ? 'checked' : '' %>>
                                                <label class="form-check-label" for="fonction_<%= fonction._id %>">
                                                    <%= fonction.name %>
                                                </label>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                                <div class="form-text">
                                    Le personnel peut avoir plusieurs fonctions selon ses compétences
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-info">
                            <i class="bi bi-save me-2"></i>Enregistrer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
// Live calculation preview for personal fee
document.getElementById('personalFee').addEventListener('input', function() {
    const rate = parseFloat(this.value) || 0;
    const preview = document.getElementById('calculationPreview');
    const calc2h = document.getElementById('calc2h');
    const calc4h = document.getElementById('calc4h');
    
    if (rate > 0) {
        calc2h.textContent = new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(rate * 2);
        calc4h.textContent = new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(rate * 4);
        preview.classList.remove('d-none');
    } else {
        preview.classList.add('d-none');
    }
});

// Trigger calculation on page load if there's a value
document.addEventListener('DOMContentLoaded', function() {
    const personalFeeInput = document.getElementById('personalFee');
    if (personalFeeInput.value) {
        personalFeeInput.dispatchEvent(new Event('input'));
    }
});
</script>

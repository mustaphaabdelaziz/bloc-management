<% layout('layouts/boilerplate') %>
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="mb-0">Personnel Médical</h3>
        <p class="text-muted">Gestion de l'équipe médicale du bloc opératoire</p>
    </div>
    <a href="/medical-staff/new" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Nouveau Personnel
    </a>
</div>

<div class="card">
    <div class="card-body">
        <% if (medicalStaff.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Code</th>
                            <th>Personnel</th>
                            <th>Fonctions</th>
                            <th>Téléphone</th>
                            <th>Date création</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% medicalStaff.forEach(staff => { %>
                            <tr>
                                <td><strong><%= staff.code %></strong></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person-check fa-2x text-info me-3"></i>
                                        <div>
                                            <div class="fw-bold"><%= staff.firstName %> <%= staff.lastName %></div>
                                            <small class="text-muted">
                                                Né le <%= moment(staff.dateOfBirth).format('DD/MM/YYYY') %>
                                                (<%= moment().diff(staff.dateOfBirth, 'years') %> ans)
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <% if (staff.fonctions && staff.fonctions.length > 0) { %>
                                        <% staff.fonctions.forEach(fonction => { %>
                                            <span class="badge bg-secondary me-1"><%= fonction.name %></span>
                                        <% }); %>
                                    <% } else { %>
                                        <span class="text-muted">Aucune fonction</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (staff.phone) { %>
                                        <i class="bi bi-telephone me-1"></i><%= staff.phone %>
                                    <% } else { %>
                                        <span class="text-muted">-</span>
                                    <% } %>
                                </td>
                                <td><%= moment(staff.createdAt).format('DD/MM/YYYY') %></td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/medical-staff/<%= staff._id %>" class="btn btn-sm btn-outline-primary" title="Voir">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="/medical-staff/<%= staff._id %>/edit" class="btn btn-sm btn-outline-warning" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteStaff('<%= staff._id %>')" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="bi bi-people fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Aucun personnel trouvé</h5>
                <p class="text-muted">Commencez par ajouter du personnel médical</p>
                <a href="/medical-staff/new" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Ajouter le premier membre
                </a>
            </div>
        <% } %>
    </div>
</div>

<script>
function deleteStaff(id) {
    if (confirmDelete('Êtes-vous sûr de vouloir supprimer ce membre du personnel ?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/medical-staff/' + id + '?_method=DELETE';
        document.body.appendChild(form);
        form.submit();
    }
}
</script>

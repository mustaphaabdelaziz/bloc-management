<% layout('layouts/boilerplate') %>
<!-- views/medicalStaff/index.ejs -->
<div class="material-page-header">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title mb-0">Gestion du Personnel Médical</h1>
                <p class="page-subtitle">Gestion complète de l'équipe médicale du bloc opératoire</p>
            </div>
            <% if (permissions.canManageData) { %>
            <div class="d-flex gap-2">
                <a href="/medical-staff/new" class="action-button">
                    <i class="bi bi-plus-circle"></i>Nouveau Membre
                </a>
                <div class="dropdown">
                    <button class="action-button dropdown-toggle" type="button" id="excelDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-file-earmark-spreadsheet"></i>Import Excel
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="excelDropdown">
                        <li><a class="dropdown-item" href="/medical-staff/template" target="_blank">
                            <i class="bi bi-download me-2"></i>Télécharger Modèle
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#" onclick="showImportModal()">
                            <i class="bi bi-upload me-2"></i>Importer Fichier
                        </a></li>
                    </ul>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>

<div class="container">
    <!-- Filtres -->
    <div class="material-filters">
        <h5 class="filter-title">
            <i class="bi bi-funnel"></i>Filtres et Recherche
        </h5>
        <form method="GET" class="row g-3">
            <div class="col-md-10">
                <label class="form-label">Recherche</label>
                <input type="text" name="search" class="form-control" placeholder="Nom, fonction ou spécialité..." value="<%= typeof search !== 'undefined' ? search : '' %>">
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-search"></i>
                    </button>
                    <a href="/medical-staff" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Liste du personnel médical -->
    <div class="material-card">
        <div class="card-header">
            <h5 class="card-title">
                <i class="bi bi-list-ul"></i>Liste du Personnel Médical
                <span class="badge bg-light text-primary ms-2"><%= medicalStaff.length %></span>
            </h5>
        </div>
        <div class="card-body">
            <% if (medicalStaff.length > 0) { %>
                <div class="material-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Nom</th>
                                <th>Fonction</th>
                                <th>Créé par</th>
                                <th>Modifié par</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% medicalStaff.forEach(staff => { %>
                                <tr>
                                    <td>
                                        <span class="badge bg-info"><%= staff.code %></span>
                                    </td>
                                    <td>
                                        <div class="material-name">
                                            <div class="material-avatar">
                                                <i class="bi bi-person"></i>
                                            </div>
                                            <div class="material-details">
                                                <h6><%= staff.firstName %> <%= staff.lastName %></h6>
                                                <small><%= staff.email || 'N/A' %></small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <% if (staff.fonctions && staff.fonctions.length > 0) { %>
                                            <span class="badge bg-secondary"><%= staff.fonctions[0].name %></span>
                                        <% } else { %>
                                            <span class="text-muted">N/A</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <small>
                                            <% if (staff.createdBy) { %>
                                                <%= staff.createdBy.firstname %> <%= staff.createdBy.lastname %>
                                                <br>
                                                <span class="text-muted"><%= typeof moment !== 'undefined' ? moment(staff.createdAt).format('DD/MM/YYYY HH:mm') : '' %></span>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </small>
                                    </td>
                                    <td>
                                        <small>
                                            <% if (staff.updatedBy) { %>
                                                <%= staff.updatedBy.firstname %> <%= staff.updatedBy.lastname %>
                                                <br>
                                                <span class="text-muted"><%= typeof moment !== 'undefined' ? moment(staff.updatedAt).format('DD/MM/YYYY HH:mm') : '' %></span>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </small>
                                    </td>
                                    <td>
                                        <% if (permissions.canManageData) { %>
                                        <div class="material-actions">
                                            <a href="/medical-staff/<%= staff._id %>" class="btn btn-outline-primary btn-sm" title="Voir">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/medical-staff/<%= staff._id %>/edit" class="btn btn-outline-warning btn-sm" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger btn-sm" onclick="deleteMedicalStaff('<%= staff._id %>')" title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                        <% } else { %>
                                        <span class="text-muted">-</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="material-empty-state">
                    <div class="empty-icon">
                        <i class="bi bi-people"></i>
                    </div>
                    <h5 class="empty-title">Aucun personnel médical trouvé</h5>
                    <p class="empty-description">Commencez par ajouter des membres à votre équipe médicale</p>
                    <a href="/medical-staff/new" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>Ajouter le premier membre
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script>
function deleteMedicalStaff(id) {
    if (confirm('Êtes-vous sûr de vouloir supprimer ce membre du personnel médical ?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/medical-staff/' + id + '?_method=DELETE';
        document.body.appendChild(form);
        form.submit();
    }
}

function showImportModal() {
    const modal = new bootstrap.Modal(document.getElementById('importExcelModal'));
    modal.show();
}
</script>

<!-- Modal pour importer du personnel médical -->
<div class="modal fade material-modal" id="importExcelModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success">
                <h5 class="modal-title">
                    <i class="bi bi-upload"></i>Importer Personnel Médical depuis Excel
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="importForm" method="POST" action="/medical-staff/import" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="alert alert-info d-flex justify-content-between align-items-center" role="alert">
                        <div>
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Besoin d'un modèle ?</strong> Téléchargez le fichier Excel pré-formaté avec des exemples.
                        </div>
                        <div>
                            <button type="button" id="downloadTemplate" class="btn btn-sm btn-outline-primary me-2">
                                <i class="bi bi-download me-1"></i>Télécharger (Navigateur)
                            </button>
                            <a href="/medical-staff/template" class="btn btn-sm btn-outline-secondary" download>
                                <i class="bi bi-cloud-download me-1"></i>Télécharger (Serveur)
                            </a>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="excelFileInput" class="form-label required-field">Fichier Excel</label>
                        <div class="input-group">
                            <input type="file" class="form-control" id="excelFileInput" name="excelFile" accept=".xlsx,.xls" required>
                            <span class="input-group-text">
                                <i class="bi bi-file-earmark-spreadsheet"></i>
                            </span>
                        </div>
                        <small class="form-text text-muted d-block mt-2">
                            Formats acceptés: .xlsx, .xls | Taille maximale: 5 MB
                        </small>
                    </div>

                    <div class="alert alert-warning" role="alert">
                        <strong><i class="bi bi-exclamation-triangle me-2"></i>Format du fichier Excel:</strong>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <strong>Colonnes requises:</strong>
                                <ul class="mb-0 mt-1 small">
                                    <li><strong>Prénom</strong> - Prénom du personnel</li>
                                    <li><strong>Nom</strong> - Nom du personnel</li>
                                    <li><strong>Date de Naissance</strong> - Format: YYYY-MM-DD</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <strong>Colonnes optionnelles:</strong>
                                <ul class="mb-0 mt-1 small">
                                    <li>Téléphone - Numéro de contact</li>
                                    <li>Fonction - Rôle/Fonction médicale</li>
                                    <li>Frais Personnels - Frais horaires (DA)</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-light border" role="alert">
                        <small class="text-muted">
                            <i class="bi bi-lightbulb me-1"></i>
                            <strong>Important:</strong> La date de naissance doit être au format YYYY-MM-DD (exemple: 1980-05-15).
                            Les noms de fonctions doivent correspondre exactement aux fonctions existantes.
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i>Annuler
                    </button>
                    <button type="submit" class="btn btn-success" id="importBtn">
                        <i class="bi bi-upload me-1"></i>Importer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
<script src="/js/medicalStaff.js"></script>
</script>
</script>

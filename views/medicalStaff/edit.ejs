<% layout('layouts/boilerplate') %>
<!-- views/medicalStaff/edit.ejs -->
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="bi bi-pencil me-2"></i>Modifier Personnel Médical
                </h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/medical-staff/<%= staff._id %>?_method=PUT">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="code" class="form-label">Code *</label>
                                <input type="text" class="form-control" id="code" name="code" value="<%= staff.code %>" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="phone" class="form-label">Téléphone</label>
                                <input type="tel" class="form-control" id="phone" name="phone" value="<%= staff.phone || '' %>">
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="firstName" class="form-label">Prénom *</label>
                                <input type="text" class="form-control" id="firstName" name="firstName" value="<%= staff.firstName %>" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="lastName" class="form-label">Nom *</label>
                                <input type="text" class="form-control" id="lastName" name="lastName" value="<%= staff.lastName %>" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="dateOfBirth" class="form-label">Date de naissance *</label>
                        <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" 
                               value="<%= moment(staff.dateOfBirth).format('YYYY-MM-DD') %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="personalFee" class="form-label">Frais personnels (DA)</label>
                        <input type="number" class="form-control" id="personalFee" name="personalFee" 
                               value="<%= staff.personalFee || 0 %>" min="0" step="0.01">
                        <div class="form-text">Frais personnels facturés au chirurgien pour allocation horaire</div>
                    </div>
                    
                    <div class="card mb-4">
                        <div class="card-header bg-secondary text-white">
                            <h6 class="mb-0">Fonctions / Rôles</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <% fonctions.forEach(fonction => { %>
                                    <div class="col-md-4 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" 
                                                   name="fonctions" value="<%= fonction._id %>" 
                                                   id="fonction_<%= fonction._id %>"
                                                   <%= staff.fonctions.some(f => f._id.toString() === fonction._id.toString()) ? 'checked' : '' %>>
                                            <label class="form-check-label" for="fonction_<%= fonction._id %>">
                                                <%= fonction.name %>
                                            </label>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/medical-staff/<%= staff._id %>" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Annuler
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save me-2"></i>Sauvegarder
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

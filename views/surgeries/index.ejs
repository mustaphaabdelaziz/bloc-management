<% layout('layouts/boilerplate') %>
<!-- views/surgeries/index.ejs -->
<div class="material-page-header">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title mb-0">Gestion des Chirurgies</h1>
                <p class="page-subtitle">Planification et suivi des interventions chirurgicales</p>
            </div>
            <a href="/surgeries/new" class="action-button">
                <i class="bi bi-plus-circle"></i>Nouvelle Chirurgie
            </a>
        </div>
    </div>
</div>

<div class="container">
    <!-- Filtres -->
    <div class="material-filters">
        <h5 class="filter-title">
            <i class="bi bi-funnel"></i>Filtres et Recherche
        </h5>
        <form method="GET" class="row g-3" id="searchForm" onsubmit="return false;">
            <div class="col-md-4">
                <label class="form-label">Recherche</label>
                <input type="text" name="search" class="form-control" placeholder="Code, patient, chirurgien..." value="<%= typeof filters !== 'undefined' && filters.search ? filters.search : '' %>" id="searchInput" autocomplete="off">
            </div>
            <div class="col-md-3">
                <label class="form-label">Classification ASA</label>
                <select name="asaClass" class="form-select" id="asaFilter">
                    <option value="">Toutes les classes</option>
                    <option value="I" <%= typeof asaFilter !== 'undefined' && asaFilter === 'I' ? 'selected' : '' %>>ASA I</option>
                    <option value="II" <%= typeof asaFilter !== 'undefined' && asaFilter === 'II' ? 'selected' : '' %>>ASA II</option>
                    <option value="III" <%= typeof asaFilter !== 'undefined' && asaFilter === 'III' ? 'selected' : '' %>>ASA III</option>
                    <option value="none" <%= typeof asaFilter !== 'undefined' && asaFilter === 'none' ? 'selected' : '' %>>Non spécifiée</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Statut</label>
                <select name="status" class="form-select" id="statusFilter">
                    <option value="">Tous les statuts</option>
                    <option value="planned" <%= typeof statusFilter !== 'undefined' && statusFilter === 'planned' ? 'selected' : '' %>>Planifiée</option>
                    <option value="urgent" <%= typeof statusFilter !== 'undefined' && statusFilter === 'urgent' ? 'selected' : '' %>>Urgente</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-outline-primary" id="searchBtn">
                        <i class="bi bi-search"></i>
                    </button>
                    <a href="/surgeries" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Liste des chirurgies -->
    <div class="material-card">
        <div class="card-header">
            <h5 class="card-title">
                <i class="bi bi-list-ul"></i>Liste des Chirurgies
                <span class="badge bg-light text-primary ms-2"><%= surgeries.length %></span>
            </h5>
        </div>
        <div class="card-body">
            <% if (surgeries.length > 0) { %>
                <div class="material-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Patient</th>
                                <th>Chirurgien</th>
                                <th>Prestation</th>
                                <th>Date</th>
                                <th>Salle</th>
                                <th>ASA</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% surgeries.forEach(surgery => { %>
                                <tr>
                                    <td>
                                        <span class="badge bg-light text-dark fw-bold"><%= surgery.code %></span>
                                    </td>
                                    <td>
                                        <div class="material-name">
                                            <div class="material-avatar">
                                                <i class="bi bi-person"></i>
                                            </div>
                                            <div class="material-details">
                                                <h6><%= surgery.patient.firstName %> <%= surgery.patient.lastName %></h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        Dr. <%= surgery.surgeon.lastName %> <%= surgery.surgeon.firstName %>
                                    </td>
                                    <td>
                                        <%= surgery.prestation.designation %>
                                    </td>
                                    <td>
                                        <%= typeof moment !== 'undefined' ? moment(surgery.incisionTime).format('DD/MM/YYYY') : new Date(surgery.incisionTime).toLocaleDateString('fr-FR') %>
                                    </td>
                                    <td>
                                        <% if (surgery.operatingRoom) { %>
                                            <span class="badge bg-light text-dark">
                                                <i class="bi bi-hospital me-1"></i><%= surgery.operatingRoom.code %>
                                            </span>
                                            <% if (surgery.reservationStatus) { %>
                                                <br>
                                                <% if (surgery.reservationStatus === 'confirmed') { %>
                                                    <small class="badge bg-success mt-1">Confirmé</small>
                                                <% } else if (surgery.reservationStatus === 'reserved') { %>
                                                    <small class="badge bg-primary mt-1">Réservé</small>
                                                <% } %>
                                            <% } %>
                                        <% } else { %>
                                            <span class="text-muted small">-</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (surgery.asaClass) { %>
                                            <span class="badge bg-info" title="Classification ASA">
                                                <i class="bi bi-heart-pulse me-1"></i>ASA <%= surgery.asaClass %><%= surgery.asaUrgent ? ' U' : '' %>
                                            </span>
                                        <% } else { %>
                                            <span class="text-muted small">-</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (surgery.status === 'planned') { %>
                                            <span class="badge bg-secondary">Planifiée</span>
                                        <% } else if (surgery.status === 'urgent') { %>
                                            <span class="badge bg-danger">Urgente</span>
                                        <% } else { %>
                                            <span class="badge bg-dark">Annulée</span>
                                        <% } %>
                                        <% if (surgery.statusLifecycle === 'closed') { %>
                                            <span class="badge bg-success ms-1">
                                                <i class="bi bi-lock-fill"></i> Clôturée
                                            </span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="material-actions">
                                            <a href="/surgeries/<%= surgery._id %>" class="btn btn-outline-primary btn-sm" title="Voir">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <% if (surgery.statusLifecycle !== 'closed' || permissions.canEditClosedSurgeries) { %>
                                                <a href="/surgeries/<%= surgery._id %>/edit" class="btn btn-outline-warning btn-sm" title="Modifier">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="material-empty-state">
                    <div class="empty-icon">
                        <i class="bi bi-scissors"></i>
                    </div>
                    <h5 class="empty-title">Aucune chirurgie trouvée</h5>
                    <p class="empty-description">Commencez par programmer des interventions chirurgicales</p>
                    <a href="/surgeries/new" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>Créer une chirurgie
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script src="/js/live-search.js"></script>
<script>
// Initialize live search with multiple filters
initLiveSearch({
    searchInputId: 'searchInput',
    contentSelector: '.material-card .card-body',
    filterSelectors: ['#asaFilter', '#statusFilter'],
    endpoint: '/surgeries'
});
</script>

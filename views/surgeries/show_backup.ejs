<!-- views/surgeries/show.ejs -->
<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-scissors me-2"></i>Détails de la Chirurgie
                </h5>
                <div>
                    <% if (surgery.status === 'planned') { %>
                        <span class="badge bg-primary fs-6">Planifiée</span>
                    <% } else if (surgery.status === 'urgent') { %>
                        <span class="badge bg-danger fs-6">Urgente</span>
                    <% } else { %>
                        <span class="badge bg-secondary fs-6">Annulée</span>
                    <% } %>
                </div>
            </div>
            <div class="card-body">
               
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="text-muted">Code Chirurgie</h6>
                        <h4 class="text-primary"><%= surgery.code %></h4>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <h6 class="text-muted">Date et Heure</h6>
                        <h5><%= moment(surgery.beginDateTime).format('DD/MM/YYYY à HH:mm') %></h5>
                        <% if (surgery.endDateTime) { %>
                            <small class="text-muted">
                                Fin: <%= moment(surgery.endDateTime).format('DD/MM/YYYY à HH:mm') %>
                            </small>
                        <% } %>
                        <% if (surgery.applyExtraFees && surgery.actualDuration > surgery.prestation.duration) { %>
                            <% const extraduration = surgery.actualDuration - surgery.prestation.duration; %>
                            <% const threshold = surgery.prestation.exceededDurationUnit || 15; %>
                            <% if (extraduration >= threshold) { %>
                                <% const extraFees = (surgery.prestation.exceededDurationFee || 0) * extraduration / threshold; %>
                                <div class="mt-2">
                                    <span class="badge bg-danger text-white">
                                        <i class="bi bi-exclamation-triangle me-1"></i>
                                        Frais dépassement: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(extraFees) %>
                                    </span>
                                </div>
                            <% } %>
                        <% } %>
                    </div>
                </div>

                <!-- Informations principales -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-4">
                            <h6 class="fw-bold text-info">
                                <i class="bi bi-person-circle me-2"></i>Patient
                            </h6>
                            <div class="ms-4">
                                <h5><%= surgery.patient.firstName %> <%= surgery.patient.lastName %></h5>
                                <p class="text-muted mb-0">Code: <%= surgery.patient.code %></p>
                                <p class="text-muted mb-0">NIN: <%= surgery.patient.nin %></p>
                                <% if (surgery.patient.phone) { %>
                                    <p class="text-muted mb-0"><i class="bi bi-telephone me-1"></i><%= surgery.patient.phone %></p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-4">
                            <h6 class="fw-bold text-success">
                                <i class="bi bi-person-badge me-2"></i>Chirurgien
                            </h6>
                            <div class="ms-4">
                                <h5>Dr. <%= surgery.surgeon.lastName %> <%= surgery.surgeon.firstName %></h5>
                                <p class="text-muted mb-0">Type contrat: 
                                    <span class="badge <%= surgery.surgeon && surgery.surgeon.contractType === 'location' ? 'bg-info' : 'bg-warning' %>">
                                        <%= surgery.surgeon && surgery.surgeon.contractType === 'location' ? 'location' : 'Pourcentage' %>
                                    </span>
                                </p>
                                <% if (surgery.surgeon.contractType === 'location') { %>
                                    <p class="text-muted mb-0">Taux: <%= surgery.surgeon ? (surgery.surgeon.locationRate || 0) : 0 %> DA/heure</p>
                                    <div class="mt-2 p-2 bg-info bg-opacity-10 rounded">
                                        <small class="text-info fw-bold">
                                            <i class="bi bi-cash me-1"></i>Méthode location:
                                        </small>
                                        <br><small class="text-info">
                                            • Coût location: Durée × Taux horaire
                                        </small>
                                        <br><small class="text-info">
                                            • + Coût matériaux consommés
                                        </small>
                                        <br><small class="text-info">
                                            • + Frais personnels horaires
                                        </small>
                                        <br><small class="text-info fw-bold">
                                            • Total payé par chirurgien = location + Matériaux + Personnel
                                        </small>
                                    </div>
                                    <div class="mt-2 p-2 bg-info bg-opacity-10 rounded">
                                        <small class="text-info fw-bold">
                                            <i class="bi bi-cash me-1"></i>Le chirurgien paye à la clinique:
                                        </small>
                                        <% if (surgery.actualDuration) { %>
                                            <% const durationHours = surgery.actualDuration / 60; %>
                                            <% const locationCost = durationHours * (surgery.surgeon.locationRate || 0); %>
                                            <% 
                                            let materialsCost = 0;
                                            if (surgery.consumedMaterials && surgery.consumedMaterials.length > 0) {
                                                materialsCost = surgery.consumedMaterials.reduce((sum, mat) => sum + (mat.material?.weightedPrice * mat.quantity || 0), 0);
                                            }
                                            %>
                                            <% 
                                            let personalFees = 0;
                                            if (surgery.medicalStaff && surgery.medicalStaff.length > 0) {
                                                personalFees = surgery.medicalStaff.reduce((sum, staff) => sum + (staff.staff?.personalFee * durationHours || 0), 0);
                                            }
                                            %>
                                            <% const surgeonPays = locationCost + materialsCost + personalFees; %>
                                            <br><small class="text-info">
                                                • location: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(locationCost) %>
                                                (<%= durationHours.toFixed(2) %>h × <%= surgery.surgeon.locationRate || 0 %> DA/h)
                                            </small>
                                            <br><small class="text-info">
                                                • Matériaux: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(materialsCost) %>
                                            </small>
                                            <br><small class="text-info">
                                                • Frais personnels: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(personalFees) %>
                                            </small>
                                            <br><small class="text-info fw-bold">
                                                = Total: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgeonPays) %>
                                            </small>
                                        <% } else { %>
                                            <br><small class="text-muted">Calculera après la fin de la chirurgie</small>
                                        <% } %>
                                    </div>
                                <% } else { %>
                                    <p class="text-muted mb-0">Pourcentage: <strong>45%</strong> (fixe)</p>
                                    <div class="mt-2 p-2 bg-warning bg-opacity-10 rounded">
                                        <small class="text-warning fw-bold">
                                            <i class="bi bi-calculator me-1"></i>Méthode Pourcentage (45% fixe):
                                        </small>
                                        <br><small class="text-warning">
                                            • Base: Prix prestation - Coût matériaux patient
                                        </small>
                                        <br><small class="text-warning">
                                            • Part chirurgien: 45% de la base
                                        </small>
                                        <br><small class="text-warning">
                                            • + Frais dépassement (si durée dépassée)
                                        </small>
                                        <br><small class="text-warning fw-bold">
                                            • Total chirurgien = Part chirurgien + Frais dépassement
                                        </small>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Prestation et durée -->
                <div class="mb-4">
                    <h6 class="fw-bold text-danger">
                        <i class="bi bi-list-check me-2"></i>Prestation
                    </h6>
                    <div class="ms-4">
                        <h5><%= surgery.prestation ? surgery.prestation.designation : 'Prestation non définie' %></h5>
                        <div class="row">
                            <div class="col-md-4">
                                <p class="text-muted mb-0">Durée prévue: <strong><%= surgery.prestation.duration %> minutes</strong></p>
                            </div>
                            <% if (surgery.endDateTime) { %>
                                <% const actualDuration = Math.round((new Date(surgery.endDateTime) - new Date(surgery.beginDateTime)) / 60000); %>
                                <div class="col-md-4">
                                    <p class="text-muted mb-0">Durée réelle: 
                                        <strong class="<%= actualDuration > surgery.prestation.duration ? 'text-danger' : 'text-success' %>">
                                            <%= actualDuration %> minutes
                                        </strong>
                                    </p>
                                </div>
                                <% if (actualDuration > surgery.prestation.duration) { %>
                                    <div class="col-md-4">
                                        <p class="text-danger mb-0">
                                            <i class="bi bi-exclamation-triangle me-1"></i>
                                            Dépassement: <strong>+<%= actualDuration - surgery.prestation.duration %> minutes</strong>
                                        </p>
                                    </div>
                                <% } %>
                            <% } %>
                        </div>
                        <p class="text-muted mb-0">Prix HT: <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.prestation.priceHT) %></strong></p>
                        <% if (surgery.status === 'urgent' && (surgery.prestation?.urgentFeePercentage || 0) > 0) { %>
                            <% const effectivePrice = (surgery.adjustedPrice || surgery.prestation.priceHT) * (1 + (surgery.prestation.urgentFeePercentage || 0)); %>
                            <% const urgentFeeAmount = (surgery.adjustedPrice || surgery.prestation.priceHT) * (surgery.prestation.urgentFeePercentage || 0); %>
                            <p class="text-danger mb-0">
                                <i class="bi bi-exclamation-triangle me-1"></i>Frais urgents: <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(urgentFeeAmount) %></strong>
                            </p>
                            <p class="text-danger mb-0">
                                <i class="bi bi-info-circle me-1"></i>Total HT: <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(effectivePrice) %></strong>
                            </p>
                        <% } %>
                        <% if (surgery.applyExtraFees) { %>
                            <p class="text-danger mb-0">
                                <i class="bi bi-exclamation-triangle me-1"></i>
                                <strong>Frais supplémentaires appliqués</strong> pour dépassement de durée
                            </p>
                            <% if (surgery.actualDuration > surgery.prestation.duration) { %>
                                <% const extraduration = surgery.actualDuration - surgery.prestation.duration; %>
                                <% const threshold = surgery.prestation.exceededDurationUnit || 15; %>
                                <% if (extraduration >= threshold) { %>
                                    <% const extraFees = (surgery.prestation.exceededDurationFee || 0) * extraduration / threshold; %>
                                    <p class="text-danger small mb-0">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Durée dépassée: <%= extraduration %> min | Frais: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(extraFees) %>
                                    </p>
                                <% } else { %>
                                    <p class="text-muted small mb-0">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Durée dépassée: <%= extraduration %> min (seuil non atteint: <%= threshold %> min)
                                    </p>
                                <% } %>
                            <% } %>
                        <% } %>
                    </div>
                </div>

                <!-- Notes -->
                <% if (surgery.notes) { %>
                    <div class="mb-4">
                        <h6 class="fw-bold text-secondary">
                            <i class="bi bi-card-text me-2"></i>Notes et Observations
                        </h6>
                        <div class="ms-4">
                            <p class="text-muted"><%= surgery.notes %></p>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Sidebar avec calculs et actions -->
    <div class="col-lg-4">
        <!-- Calcul des honoraires -->
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h6 class="mb-0">
                    <i class="bi bi-calculator me-2"></i>
                    <%= surgery.surgeon.contractType === 'location' ? 'Revenus Clinique (location)' : 'Honoraires et Revenus' %>
                </h6>
            </div>
            <div class="card-body">
                <!-- Display logic based on contract type -->
                <% if (surgery.surgeon.contractType === 'percentage' && surgery.surgeonAmount && !isNaN(surgery.surgeonAmount) && surgery.surgeonAmount > 0) { %>
                    <!-- Surgeon Amount (only for percentage contracts) -->
                    <div class="text-center">
                        <h2 class="text-success">
                            <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.surgeonAmount) %>
                        </h2>
                        <p class="text-muted mb-0">Montant total chirurgien</p>
                        <small class="text-muted">
                            Méthode: Pourcentage
                            <% if (surgery.status === 'urgent') { %>
                                <br><span class="text-danger">• Chirurgie urgente</span>
                            <% } %>
                        </small>
                    </div>
                <% } %>

                <!-- Clinic Amount (always displayed for location, after surgeon for percentage) -->
                <% if (surgery.clinicAmount && !isNaN(surgery.clinicAmount) && surgery.clinicAmount > 0) { %>
                    <div class="text-center <%= surgery.surgeon.contractType === 'percentage' ? 'mt-4 pt-3 border-top' : '' %>">
                        <h<%= surgery.surgeon.contractType === 'location' ? '2' : '3' %> class="<%= surgery.surgeon.contractType === 'location' ? 'text-success' : 'text-primary' %>">
                            <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.clinicAmount) %>
                        </h<%= surgery.surgeon.contractType === 'location' ? '2' : '3' %>>
                        <p class="text-muted mb-0">
                            <%= surgery.surgeon.contractType === 'location' ? 'Revenus Clinique (location)' : 'Montant Total Clinique' %>
                        </p>
                        <small class="text-muted">
                            Méthode: <%= surgery.surgeon.contractType === 'location' ? 'location salle' : 'Pourcentage' %>
                            <% if (surgery.surgeon.contractType === 'percentage' && surgery.status === 'urgent') { %>
                                <br><span class="text-danger">• Chirurgie urgente</span>
                            <% } %>
                            <% if (surgery.surgeon.contractType === 'location') { %>
                                <br><span class="text-info">• Calcul: location durée + Matériaux + Personnel</span>
                            <% } %>
                        </small>
                        </small>
                    </div>
                <% } %>
                
                <!-- Fallback for location when clinic amount not calculated -->
                <% if (surgery.surgeon.contractType === 'location' && (!surgery.clinicAmount || isNaN(surgery.clinicAmount) || surgery.clinicAmount <= 0)) { %>
                    <div class="text-center">
                        <h2 class="text-muted">
                            <i class="bi bi-cash fa-2x mb-2"></i>
                        </h2>
                        <p class="text-muted mb-0">Revenus clinique non calculés</p>
                        <small class="text-muted">
                            Calcul automatique: location durée + Matériaux + Personnel horaires
                        </small>
                    </div>
                <% } %>
                
                <!-- Fee breakdown section -->
                <% if (surgery.surgeonAmount || surgery.clinicAmount) { %>
                    <!-- Détail des honoraires -->
                    <div class="fee-breakdown mt-3 pt-3 border-top">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="text-primary mb-0">
                                <i class="bi bi-calculator me-2"></i>Répartition des honoraires
                            </h6>
                            <span class="badge bg-success">
                                <i class="bi bi-shield-check me-1"></i>Clinic Amount Prominent Display
                            </span>
                        </div>
                        
                        <!-- Frais dépassement - Section dédiée -->
                        <% if (surgery.applyExtraFees && surgery.actualDuration > surgery.prestation.duration) { %>
                            <% const extraduration = surgery.actualDuration - surgery.prestation.duration; %>
                            <% const threshold = surgery.prestation.exceededDurationUnit || 15; %>
                            <div class="mb-3 p-3 rounded <%= extraduration >= threshold ? 'bg-danger bg-opacity-10 border border-danger' : 'bg-info bg-opacity-10 border border-info' %>">
                                <h6 class="mb-2 <%= extraduration >= threshold ? 'text-danger' : 'text-info' %>">
                                    <i class="bi bi-exclamation-triangle me-2"></i>Frais de dépassement
                                </h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <small class="text-muted">Durée prévue:</small>
                                        <br><strong><%= surgery.prestation.duration %> min</strong>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted">Durée réelle:</small>
                                        <br><strong><%= surgery.actualDuration %> min</strong>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-md-6">
                                        <small class="text-muted">Dépassement:</small>
                                        <br><strong><%= extraduration %> min</strong>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted">Seuil d'application:</small>
                                        <br><strong><%= threshold %> min</strong>
                                    </div>
                                </div>
                                <% if (extraduration >= threshold) { %>
                                    <% const extraFees = (surgery.prestation.exceededDurationFee || 0) * extraduration / threshold; %>
                                    <div class="mt-3 p-2 bg-danger bg-opacity-25 rounded">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span><strong>Frais dépassement appliqués:</strong></span>
                                            <span class="badge bg-danger text-white fs-6">
                                                <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(extraFees) %>
                                            </span>
                                        </div>
                                        <small class="text-muted">
                                            Calcul: (<%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.prestation.exceededDurationFee || 0) %> × <%= extraduration %> min) ÷ <%= threshold %> min
                                        </small>
                                    </div>
                                <% } else { %>
                                    <div class="mt-3 p-2 bg-info bg-opacity-25 rounded">
                                        <small class="text-info">
                                            <i class="bi bi-info-circle me-1"></i>
                                            Le dépassement est inférieur au seuil requis. Aucun frais supplémentaire n'est appliqué.
                                        </small>
                                    </div>
                                <% } %>
                            </div>
                        <% } %>
                        
                        <div class="row">
                            <div class="col-12">
                                <p class="mb-1 small">Prix de base HT: <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.prestation.priceHT) %></strong></p>
                                <% if (surgery.status === 'urgent' && surgery.prestation.urgentFee > 0) { %>
                                    <p class="mb-1 small text-danger">Frais urgents: <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.prestation.urgentFee) %></strong></p>
                                    <p class="mb-1 small">Total HT: <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.prestation.priceHT + surgery.prestation.urgentFee) %></strong></p>
                                <% } else { %>
                                    <p class="mb-1 small">Total HT: <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.prestation.priceHT) %></strong></p>
                                <% } %>

                                <!-- Surgeon Amount Breakdown -->
                                <% if (surgery.surgeon.contractType === 'percentage') { %>
                                    <% 
                                    let patientMaterialsCost = 0;
                                    if (surgery.consumedMaterials && surgery.consumedMaterials.length > 0) {
                                        patientMaterialsCost = surgery.consumedMaterials.reduce((sum, mat) => {
                                            if (mat.material && mat.material.category === 'patient') {
                                                return sum + (mat.material.weightedPrice * mat.quantity || 0);
                                            }
                                            return sum;
                                        }, 0);
                                    }
                                    const baseAmount = surgery.prestation.priceHT - patientMaterialsCost;
                                    %>
                                    <% const surgeonPercentage = 45; %> <!-- Fixed 45% rate -->
                                    <% const baseSurgeonAmount = baseAmount * surgeonPercentage / 100; %>
                                    <div class="mt-3 p-3 bg-light rounded">
                                        <h6 class="text-primary mb-2">
                                            <i class="bi bi-calculator me-2"></i>Détail calcul honoraires (45% fixe)
                                        </h6>
                                        <small class="text-muted d-block">
                                            • Prix prestation: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.prestation.priceHT) %>
                                        </small>
                                        <small class="text-muted d-block">
                                            • - Matériaux patient: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(patientMaterialsCost) %>
                                        </small>
                                        <small class="text-muted d-block fw-bold">
                                            • = Base calcul: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(baseAmount) %>
                                        </small>
                                        <small class="text-muted d-block">
                                            • Part chirurgien (45%): <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(baseSurgeonAmount) %>
                                        </small>
                                        <% if (surgery.applyExtraFees && surgery.actualDuration > surgery.prestation.duration) { %>
                                            <% const extraduration = surgery.actualDuration - surgery.prestation.duration; %>
                                            <% const threshold = surgery.prestation.exceededDurationUnit || 15; %>
                                            <% if (extraduration >= threshold) { %>
                                                <% const extraFees = (surgery.prestation.exceededDurationFee || 0) * extraduration / threshold; %>
                                                <small class="text-danger d-block">
                                                    • + Frais dépassement: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(extraFees) %>
                                                </small>
                                                <small class="text-success d-block fw-bold border-top pt-1">
                                                    • = Total chirurgien: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.surgeonAmount || 0) %>
                                                </small>
                                            <% } else { %>
                                                <small class="text-success d-block fw-bold">
                                                    • = Total chirurgien: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.surgeonAmount || 0) %>
                                                </small>
                                            <% } %>
                                        <% } else { %>
                                            <small class="text-success d-block fw-bold">
                                                • = Total chirurgien: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.surgeonAmount || 0) %>
                                            </small>
                                        <% } %>
                                    </div>

                                <% if (surgery.applyExtraFees && surgery.actualDuration > surgery.prestation.duration) { %>
                                    <% const extraduration = surgery.actualDuration - surgery.prestation.duration; %>
                                    <% const threshold = surgery.prestation.exceededDurationUnit || 15; %>
                                    <% if (extraduration >= threshold) { %>
                                        <% const extraFees = (surgery.prestation.exceededDurationFee || 0) * extraduration / threshold; %>
                                        <p class="mb-1 small text-danger">
                                            <i class="bi bi-plus-circle me-1"></i>
                                            Dont frais dépassement: <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(extraFees) %></strong>
                                        </p>
                                    <% } %>
                                <% } %>
                                
                                <!-- Divider between surgeon and clinic parts -->
                                <hr class="my-2">
                                
                                <!-- Clinic amount now displayed prominently above -->
                                
                                <% if (surgery.surgeon.contractType === 'location') { %>
                                    <!-- location Method Details -->
                                    <div class="mt-2 p-2 bg-info bg-opacity-10 rounded border-start border-info border-3">
                                        <h6 class="text-info mb-2">
                                            <i class="bi bi-cash me-1"></i>Détail du paiement du chirurgien à la clinique
                                        </h6>
                                        <% if (surgery.actualDuration) { %>
                                            <% const durationHours = surgery.actualDuration / 60; %>
                                            <% const locationCost = durationHours * (surgery.surgeon.locationRate || 0); %>
                                            <% 
                                            let materialsCost = 0;
                                            if (surgery.consumedMaterials && surgery.consumedMaterials.length > 0) {
                                                materialsCost = surgery.consumedMaterials.reduce((sum, mat) => sum + (mat.material?.weightedPrice * mat.quantity || 0), 0);
                                            }
                                            %>
                                            <% 
                                            let personalFees = 0;
                                            if (surgery.medicalStaff && surgery.medicalStaff.length > 0) {
                                                personalFees = surgery.medicalStaff.reduce((sum, staff) => sum + (staff.staff?.personalFee * durationHours || 0), 0);
                                            }
                                            %>
                                            <% const surgeonPays = locationCost + materialsCost + personalFees; %>
                                            
                                            <div class="mb-2">
                                                <small class="text-muted d-block">
                                                    <i class="bi bi-clock me-1"></i>location salle: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(locationCost) %>
                                                    (<%= durationHours.toFixed(2) %>h × <%= surgery.surgeon.locationRate || 0 %> DA/h)
                                                </small>
                                                <small class="text-muted d-block">
                                                    <i class="bi bi-box me-1"></i>Matériaux: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(materialsCost) %>
                                                </small>
                                                <small class="text-muted d-block">
                                                    <i class="bi bi-people me-1"></i>Frais personnels horaires: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(personalFees) %>
                                                </small>
                                                <small class="text-info fw-bold d-block border-top pt-1">
                                                    <i class="bi bi-calculator me-1"></i>Total payé par le chirurgien: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgeonPays) %>
                                                </small>
                                            </div>
                                            <% if (surgery.status === 'urgent') { %>
                                                <div class="mt-1">
                                                    <small class="text-warning d-block">
                                                        <i class="bi bi-exclamation-triangle me-1"></i>Frais urgents: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.prestation.urgentFee || 0) %> (perçus par la clinique)
                                                    </small>
                                                </div>
                                            <% } %>
                                            <% if (surgery.applyExtraFees && surgery.actualDuration > surgery.prestation.duration) { %>
                                                <% const extraduration = surgery.actualDuration - surgery.prestation.duration; %>
                                                <% const threshold = surgery.prestation.exceededDurationUnit || 15; %>
                                                <% if (extraduration >= threshold) { %>
                                                    <% const extraFees = (surgery.prestation.exceededDurationFee || 0) * extraduration / threshold; %>
                                                    <div class="mt-1">
                                                        <small class="text-warning d-block">
                                                            <i class="bi bi-plus-circle me-1"></i>Frais dépassement: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(extraFees) %> (perçus par la clinique)
                                                        </small>
                                                    </div>
                                                <% } %>
                                            <% } %>
                                        <% } else { %>
                                            <small class="text-muted">Le détail sera disponible après la fin de la chirurgie</small>
                                        <% } %>
                                    </div>
                                <% } %>
                                
                                <% if (surgery.surgeon.contractType === 'percentage') { %>
                                    <!-- Surgeon Part Details -->
                                    <div class="mt-2 p-2 bg-primary bg-opacity-10 rounded border-start border-primary border-3">
                                        <h6 class="text-primary mb-2">
                                            <i class="bi bi-person-circle me-1"></i>Détail Honoraires Chirurgien
                                        </h6>

                                        <!-- Base Calculation -->
                                        <% 
                                        let patientMaterialsCost2 = 0;
                                        if (surgery.consumedMaterials && surgery.consumedMaterials.length > 0) {
                                            patientMaterialsCost2 = surgery.consumedMaterials.reduce((sum, mat) => {
                                                if (mat.material && mat.material.category === 'patient') {
                                                    return sum + (mat.material.weightedPrice * mat.quantity || 0);
                                                }
                                                return sum;
                                            }, 0);
                                        }
                                        const baseAmount = surgery.prestation.priceHT - patientMaterialsCost2;
                                        %>
                                        <% const surgeonPercentage = 45; %> <!-- Fixed 45% rate -->
                                        <% const baseSurgeonAmount = baseAmount * surgeonPercentage / 100; %>

                                        <div class="mb-3">
                                            <h6 class="text-primary mb-2 small">
                                                <i class="bi bi-calculator me-1"></i>Calcul Honoraires (45% fixe)
                                            </h6>
                                            <div class="p-2 bg-light rounded small">
                                                <div class="d-flex justify-content-between">
                                                    <span>Prix prestation:</span>
                                                    <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.prestation.priceHT) %></strong>
                                                </div>
                                                <div class="d-flex justify-content-between">
                                                    <span>- Matériaux patient:</span>
                                                    <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(patientMaterialsCost2) %></strong>
                                                </div>
                                                <div class="d-flex justify-content-between border-top pt-1">
                                                    <span><strong>= Base calcul:</strong></span>
                                                    <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(baseAmount) %></strong>
                                                </div>
                                                <div class="d-flex justify-content-between">
                                                    <span>× 45% (part chirurgien):</span>
                                                    <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(baseSurgeonAmount) %></strong>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Extra Fees Section -->
                                        <% if (surgery.applyExtraFees && surgery.actualDuration > surgery.prestation.duration) { %>
                                            <% const extraduration = surgery.actualDuration - surgery.prestation.duration; %>
                                            <% const threshold = surgery.prestation.exceededDurationUnit || 15; %>
                                            <% if (extraduration >= threshold) { %>
                                                <% const extraFees = (surgery.prestation.exceededDurationFee || 0) * extraduration / threshold; %>
                                                <div class="mb-3 p-2 bg-danger bg-opacity-10 rounded border border-danger">
                                                    <h6 class="text-danger mb-2 small">
                                                        <i class="bi bi-exclamation-triangle me-1"></i>Frais Supplémentaires
                                                    </h6>
                                                    <small class="text-muted d-block">Durée dépassée: <%= extraduration %> min (seuil: <%= threshold %> min)</small>
                                                    <small class="text-muted d-block">Frais dépassement: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.prestation.exceededDurationFee || 0) %> × <%= extraduration %> ÷ <%= threshold %> = <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(extraFees) %></strong></small>
                                                </div>

                                                <!-- Total Calculation -->
                                                <div class="mt-3 p-2 bg-success bg-opacity-10 rounded border border-success">
                                                    <h6 class="text-success mb-2 small">
                                                        <i class="bi bi-plus-circle me-1"></i>Total Honoraires Chirurgien
                                                    </h6>
                                                    <small class="text-muted d-block">Base: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(baseSurgeonAmount) %></small>
                                                    <small class="text-muted d-block">+ Frais supplémentaires: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(extraFees) %></small>
                                                    <small class="text-muted d-block"><strong>Total: <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(baseSurgeonAmount + extraFees) %></strong></small>
                                                </div>
                                            <% } else { %>
                                                <!-- No Extra Fees Applied -->
                                                <div class="mb-3 p-2 bg-info bg-opacity-10 rounded border border-info">
                                                    <small class="text-info">
                                                        <i class="bi bi-info-circle me-1"></i>
                                                        Dépassement insuffisant (<%= extraduration %> min < <%= threshold %> min). Aucun frais supplémentaire.
                                                    </small>
                                                </div>
                                            <% } %>
                                        <% } %>
                                    </div>
                                    
                                    <!-- Clinic Part Details -->
                                    <div class="mt-2 p-2 bg-success bg-opacity-10 rounded border-start border-success border-3">
                                        <h6 class="text-success mb-2">
                                            <i class="bi bi-building me-1"></i>Détail Part Clinique
                                        </h6>
                                        <% const clinicBase = baseAmount * (1 - surgeonPercentage / 100); %>
                                        <div class="small">
                                            <div class="d-flex justify-content-between">
                                                <span>Part clinique de base (55%):</span>
                                                <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(clinicBase) %></strong>
                                            </div>
                                            <% if (surgery.medicalStaff && surgery.medicalStaff.length > 0) { %>
                                                <% const durationHours = (surgery.actualDuration || 0) / 60; %>
                                                <% const personalFees = surgery.medicalStaff.reduce((sum, staff) => sum + (staff.staff.personalFee * durationHours), 0); %>
                                                <div class="d-flex justify-content-between">
                                                    <span>+ Frais personnels:</span>
                                                    <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(personalFees) %></strong>
                                                </div>
                                            <% } %>
                                            <% if (surgery.status === 'urgent' && surgery.prestation.urgentFee > 0) { %>
                                                <div class="d-flex justify-content-between">
                                                    <span>+ Frais urgents:</span>
                                                    <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.prestation.urgentFee) %></strong>
                                                </div>
                                            <% } %>
                                            <% 
                                            let clinicMaterials = 0;
                                            if (surgery.consumedMaterials && surgery.consumedMaterials.length > 0) {
                                                clinicMaterials = surgery.consumedMaterials.reduce((sum, mat) => {
                                                    if (mat.material && mat.material.category !== 'patient') {
                                                        return sum + (mat.material.weightedPrice * mat.quantity || 0);
                                                    }
                                                    return sum;
                                                }, 0);
                                            }
                                            %>
                                            <% if (clinicMaterials > 0) { %>
                                                <div class="d-flex justify-content-between">
                                                    <span>+ Matériaux clinique:</span>
                                                    <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(clinicMaterials) %></strong>
                                                </div>
                                            <% } %>
                                            <div class="d-flex justify-content-between border-top pt-1 mt-1">
                                                <span><strong>= Total clinique:</strong></span>
                                                <strong class="text-success"><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(surgery.clinicAmount || 0) %></strong>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                                <% if (surgery.medicalStaff && surgery.medicalStaff.length > 0) { %>
                                    <% const durationHours = (surgery.actualDuration || 0) / 60; %>
                                    <% const totalPersonalFees = surgery.medicalStaff.reduce((sum, staff) => sum + (staff.staff.personalFee * durationHours), 0); %>
                                    <p class="mb-1 small">Personnel médical (horaire): <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(totalPersonalFees) %></strong></p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <div class="text-center text-muted">
                        <i class="bi bi-calculator fa-3x mb-3"></i>
                        <p>Honoraires non calculés</p>
                        <small>Les honoraires seront calculés automatiquement</small>
                    </div>
                <% } %>
                
                <form method="POST" action="/surgeries/<%= surgery._id %>/calculate-fees" class="mt-3">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-calculator me-2"></i>Recalculer
                    </button>
                </form>
            </div>
        </div>

        <!-- Informations sur le statut -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>Statut et Implications
                </h6>
            </div>
            <div class="card-body">
                <% if (surgery.status === 'urgent') { %>
                    <div class="alert alert-danger">
                        <h6><i class="bi bi-exclamation-triangle me-2"></i>Chirurgie Urgente</h6>
                        <ul class="mb-0">
                            <li>Frais urgents ajoutés directement au montant clinique</li>
                            <li>Montant fixe ajouté (pas de pourcentage)</li>
                            <li>Traitement prioritaire</li>
                        </ul>
                    </div>
                <% } else if (surgery.status === 'planned') { %>
                    <div class="alert alert-info">
                        <h6><i class="bi bi-calendar me-2"></i>Chirurgie Planifiée</h6>
                        <ul class="mb-0">
                            <li>Honoraires standards appliqués</li>
                            <li>Pas de frais supplémentaires</li>
                            <li>Programmation normale</li>
                        </ul>
                    </div>
                <% } else { %>
                    <div class="alert alert-secondary">
                        <h6><i class="bi bi-x-circle me-2"></i>Chirurgie Annulée</h6>
                        <ul class="mb-0">
                            <li>Aucun frais appliqué</li>
                            <li>Matériaux non consommés</li>
                            <li>Personnel libéré</li>
                        </ul>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Personnel médical -->
        <% if (surgery.medicalStaff && surgery.medicalStaff.length > 0) { %>
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-people me-2"></i>Personnel Médical
                    </h6>
                </div>
                <div class="card-body">
                    <% 
                    const durationInHours = surgery.actualDuration ? surgery.actualDuration / 60 : 0;
                    surgery.medicalStaff.forEach(staff => { 
                    %>
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-person-check me-2 text-primary"></i>
                                <div>
                                    <div class="fw-bold">
                                        <%= staff.staff.firstName %> <%= staff.staff.lastName %>
                                    </div>
                                    <small class="text-muted">
                                        <%= staff.rolePlayedId.name %>
                                    </small>
                                </div>
                            </div>
                            <div class="text-end">
                                <small class="text-muted">
                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(staff.staff.personalFee) %>/h × <%= durationInHours.toFixed(1) %>h
                                </small>
                                <div class="fw-bold text-success">
                                    <% const staffCost = staff.staff.personalFee * durationInHours; %>
                                    <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(staffCost) %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center">
                        <strong>Total frais personnels:</strong>
                        <strong class="text-success">
                            <% const totalStaffCost = surgery.medicalStaff.reduce((sum, staff) => sum + (staff.staff.personalFee * durationInHours), 0); %>
                            <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(totalStaffCost) %>
                        </strong>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- Matériaux consommés -->
        <% if (surgery.consumedMaterials && surgery.consumedMaterials.length > 0) { %>
            <div class="card mb-4">
                <div class="card-header bg-info text-dark">
                    <h6 class="mb-0">
                        <i class="bi bi-box me-2"></i>Matériaux Consommés
                    </h6>
                </div>
                <div class="card-body">
                    <% let totalMaterialCost = 0; %>
                    <% surgery.consumedMaterials.forEach(material => { %>
                        <% const cost = material.material.priceHT * material.quantity; %>
                        <% totalMaterialCost += cost; %>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div class="flex-grow-1">
                                <div class="fw-bold small"><%= material.material.designation %></div>
                                <small class="text-muted">
                                    <%= material.quantity %> <%= material.material.unitOfMeasure %> 
                                    × <%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(material.material.priceHT) %>
                                </small>
                                <div>
                                    <span class="badge <%= material.material.category === 'consumable' ? 'bg-secondary' : 'bg-primary' %> badge-sm">
                                        <%= material.material.category === 'consumable' ? 'Consommable' : 'Patient' %>
                                    </span>
                                </div>
                            </div>
                            <div class="text-end">
                                <strong><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(cost) %></strong>
                            </div>
                        </div>
                    <% }); %>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <strong>Total Matériaux:</strong>
                        <strong class="text-danger"><%= new Intl.NumberFormat('fr-DZ', { style: 'currency', currency: 'DZD' }).format(totalMaterialCost) %></strong>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- Actions -->
        <div class="card">
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/surgeries/<%= surgery._id %>/edit" class="btn btn-warning">
                        <i class="bi bi-pencil me-2"></i>Modifier
                    </a>
                    <a href="/surgeries" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>